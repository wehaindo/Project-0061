<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PosAccessRightsLoginScreen" t-inherit="pos_hr.LoginScreen" t-inherit-mode="extension" owl="1">
            <xpath expr="." position="replace">
                <t t-name="LoginScreen" owl="1">
                    <div class="login-overlay">
                        <div class="screen-login">
                            <!-- Title -->
                            <div class="login-title">
                                <small>Log in to </small>
                                <t t-esc="shopName" />
                            </div>

                            <!-- Body -->
                            <div class="login-body">
                                <!-- Big centered login button -->
                                <div class="login-main-action">
                                    <t t-if="state.allowPin == false">
                                        <button class="login-button select-cashier" 
                                            t-on-click="selectEmployee">
                                            <i class="fa fa-hand-o-up" style="margin-right: 10px;"></i>
                                            Scan Finger
                                        </button>
                                    </t>
                                    <t t-if="state.allowPin == true">  
                                        <button class="login-button select-cashier"
                                            t-on-click="selectCashier">
                                        Select Cashier
                                    </button>
                                    </t>                                    
                                </div>

                                <!-- Bottom-right text links -->
                                <div class="login-alt-links">
                                    <t t-if="state.allowPin == false">
                                        <a href="javascript:void(0);" 
                                            class="alt-link"
                                            t-on-click="selectSupervisor">
                                                Activate Pin Mode
                                            </a>
                                    </t>
                                    <t t-if="state.allowPin == true">
                                        <a href="javascript:void(0);" 
                                            class="alt-link"
                                            t-on-click="disablePin">
                                                Disable Pin Mode
                                        </a>
                                    </t>
                                    <!-- <a href="#" class="alt-link">Scan your badge</a>
                                    <span class="login-or">or</span>
                                    <a href="#" class="alt-link">Other option</a> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </xpath>
    </t>
</templates>    
