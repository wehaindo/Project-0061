<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_order_line_form" model="ir.ui.view">
            <field name="name">pos.order.line.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"></field>
            <field name="arch" type="xml"> 
                <xpath expr="/form/sheet/notebook/page/field[@name='lines']/tree/field[@name='price_unit']" position="after">
                    <field name="date_order" invisible="1"/>
                    <field name="image_128" widget="image" class="oe_avatar" invisible="1"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="pos_reference" invisible="1"/>
                    <field name="state" invisible="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_pos_order_line_filter" model="ir.ui.view">
            <field name="name">pos.order.line.list.select</field>
            <field name="model">pos.order.line</field>
            <field name="arch" type="xml">
                <search string="Search Sales Order">
                    <field name="pos_reference"/>
                    <field name="product_id"/>
                    <field name="date_order"/>
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <field name="session_id"/>
                    <filter string="Invoiced" name="invoiced" domain="[('state', '=', 'invoiced')]"/>
                    <filter string="Posted" name="posted" domain="[('state', '=', 'done')]"/>
                    <separator/>
                    <filter string="Order Date" name="order_date" date="date_order"/>
                    <group expand="0" string="Group By">
                        <filter string="Session" name="session" domain="[]" context="{'group_by': 'session_id'}"/>
                        <filter string="User" name="user_id" domain="[]" context="{'group_by': 'user_id'}"/>
                        <filter string="Customer" name="customer" domain="[]" context="{'group_by': 'partner_id'}"/>
                        <filter string="Status" name="status" domain="[]" context="{'group_by': 'state'}"/>
                        <filter string="Order Date" name="order_month" domain="[]" context="{'group_by': 'date_order'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="custom_pos_order_line_form" model="ir.ui.view">
            <field name="name">pos.order.line.custom.form</field>
            <field name="model">pos.order.line</field>
            <field name="arch" type="xml">
                <form string="POS Order Item" create="0" edit="0">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="image_128" widget="image" class="oe_avatar"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="order_id" />
                                <field name="product_id" />
                                <field name="name" />
                                <field name="product_uom_id" />
                                <field name="company_id"/>
                                <field name="date_order"/>
                                <field name="session_id"/>
                                <field name="pos_reference"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="price_unit"/>
                                <field name="qty"/>
                                <field name="discount"/>
                                <field name="state"/>
                                <field name="price_subtotal" widget="monetary"/>
                                <field name="tax_ids" widget="many2many_tags"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="pos_order_line_tree_view" model="ir.ui.view">
            <field name="name">pos.order.line.custom.tree</field>
            <field name="model">pos.order.line</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="order_id"/>
                    <field name="product_id"/>
                    <field name="session_id"/>
                    <field name="image_128" widget="image" class="oe_avatar" string="Product Image" />
                    <field name="name"/>
                    <field name="qty"/>
                    <field name="price_unit"/>
                    <field name="date_order"/>
                    <field name="pos_reference"/>
                    <field name="tax_ids" widget="many2many_tags" readonly="1" />
                    <field name="discount" readonly="1"/>
                </tree>
            </field>
        </record>
        <record id="pos_order_line_kanban_view" model="ir.ui.view">
            <field name="name">pos.order.line.kanban</field>
            <field name="model">pos.order.line</field>
            <field name="arch" type="xml">
                <kanban sample="1" create="0">
                    <field name="currency_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image mr-1">
                                    <img t-att-src="kanban_image('product.product', 'image_128', record.product_id.raw_value)" alt="Product" class="o_image_64_contain"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top mb-0">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                            <strong> Order: <field name="order_id"></field></strong> 
                                            </strong>
                                        </div>
                                    </div>
                                    <div  class="mt-1">
                                        Product: <field name="product_id"  ></field>
                                    </div>
                                    <div name="product_lst_price" class="mt-1">
                                        Qty: <field name="qty"></field>
                                    </div>
                                </div>   
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>   
        <record id="action_pos_order_line" model="ir.actions.act_window">
            <field name="name">POS Order Line </field>
            <field name="res_model">pos.order.line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_id" ref="custom_pos_order_line_form"/>
            <field name="view_id" ref="pos_order_line_tree_view"/>
        </record>
        <menuitem id="bi_pos_order_line_view_menu" name="POS Order Line" parent="point_of_sale.menu_point_of_sale" sequence="4" action="action_pos_order_line"/>  
    </data>
</odoo>
