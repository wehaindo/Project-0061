<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PaymentScreenInherit" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='paymentmethods-container']" position="replace">
            <div class="paymentmethods-container">
                <PaymentScreenPaymentLines paymentLines="paymentLines"/>
                <div class="paymentmethods">
                    <t t-foreach="env.pos.payment_methods" t-as="paymentMethod"
                       t-key="paymentMethod.id">
                        <t t-if="!paymentMethod.allow_for_gift_voucher">
                            <div class="button paymentmethod"
                                 t-on-click="() => this.trigger('new-payment-line', paymentMethod)">
                                <div class="payment-name">
                                    <t t-esc="paymentMethod.name"/>
                                </div>
                            </div>
                        </t>
                    </t>
                </div>
            </div>
        </xpath>
        <xpath expr="//section[@class='payment-numpad']" position="replace">
            <section class="payment-numpad">
                <t t-if="env.pos.get_order().selected_paymentline and env.pos.get_order().selected_paymentline.payment_method.allow_for_gift_voucher">
                    <PaymentScreendisabledNumpad/>
                </t>
                <t t-else="">
                    <PaymentScreenNumpad/>
                </t>
            </section>
        </xpath>
        <xpath expr="//div[@class='payment-controls']" position="inside">
            <t t-if="env.pos.config.enable_gift_voucher and check_Paymentline
                and env.pos.get_order().get_partner()">
                <br/>
                <div class="giftCard-controls">
                    <div class="button js_gift_voucher" t-on-click="useGiftVoucher">
                        <span>Gift Voucher</span>
                    </div>
                </div>
            </t>
        </xpath>
    </t>
</templates>
