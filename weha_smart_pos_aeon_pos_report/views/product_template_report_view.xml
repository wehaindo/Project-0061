<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_aeon_product_template_report_tree" model="ir.ui.view">
        <field name="name">aeon.product.template.report.tree</field>
        <field name="model">aeon.product.template.report</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="date_start" />
                <field name="store_id" />
                <field name="date_end" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_aeon_product_template_report_form" model="ir.ui.view">
        <field name="name">aeon.product.template.report.form</field>
        <field name="model">aeon.product.template.report</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Process" name="action_process" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="store_id"/>
                            <field name="filedata" filename="filename"/>
                            <field name="filename" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_start" />
                            <field name="date_end"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_aeon_product_template_report_search" model="ir.ui.view">
        <field name="name">aeon.product.template.report.search</field>
        <field name="model">aeon.product.template.report</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="store_id"/>
                <field name="state"/>
            </search>
        </field>
    </record>   

    <record id="action_aeon_product_template_report" model="ir.actions.act_window">
        <field name="name">POS Product Template Report</field>
        <field name="res_model">aeon.product.template.report</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_aeon_product_template_report" name="Product Template Report" action="action_aeon_product_template_report" parent="point_of_sale.menu_point_rep" sequence="13"/>

</odoo>
