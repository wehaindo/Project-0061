<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_pos_order_view_tree_inherit" model="ir.ui.view">
        <field name="name">report.pos.order.view.tree.inherit</field>
        <field name="model">report.pos.order</field>
        <field name="inherit_id" ref="point_of_sale.report_pos_order_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_id']" position="after">
                <field name="branch_id" optional="hide"/>
            </xpath>           
        </field>
    </record>   

    <record id="view_report_pos_order_search_inherit" model="ir.ui.view">
        <field name="name">report.pos.order.search.inherit</field>
        <field name="model">report.pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_report_pos_order_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="branch_id"/>
            </xpath>
            <xpath expr="//filter[@name='pos']" position="before">
                <filter string="Store" name="store" context="{'group_by':'branch_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>
