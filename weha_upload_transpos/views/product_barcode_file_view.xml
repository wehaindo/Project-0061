<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_product_barcode_file_form" model="ir.ui.view">
        <field name="name">Product Barcode File Form</field>
        <field name="model">product.barcode.file</field>
        <field name="arch" type="xml">
            <form string="Product Barcode File" create="true" delete="true" edit="true">
                <header>
                    
                    <button string="Generate File" name="process_download" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_product_barcode_line"
                            class="oe_stat_button"
                            icon="fa-shopping-basket"
                            type="object">
                            <field name="barcode_line_count" widget="statinfo" string="Lines"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field name="file" filename="filename" string="Product Barcode File"/>
                            <field name="is_use_thread"/>
                        </group>
                        <group>
                            <field name="date_start" />
                            <field name="date_end" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_barcode_file_tree" model="ir.ui.view">
        <field name="name">Product Barcode File Tree</field>
        <field name="model">product.barcode.file</field>
        <field name="arch" type="xml">
            <tree string="Product Barcode File" create="true" delete="true" edit="true">
                <field name="date_start" />
                <field name="filename" />
                <field name="file" />
                <field name="is_use_thread"/>
                <field name="date_end" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="product_barcode_file_action" model="ir.actions.act_window">
        <field name="name">Product Barcode File</field>
        <field name="res_model">product.barcode.file</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_product_barcode_line_form" model="ir.ui.view">
        <field name="name">Product Barcode Line Form</field>
        <field name="model">product.barcode.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Re-Process" name="action_reprocess" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>                        
                        <field name="name"/>               
                        <field name="crud"/>                             
                    </group>s
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_barcode_line_tree" model="ir.ui.view">
        <field name="name">Product Barcode Line Tree</field>
        <field name="model">product.barcode.line</field>
        <field name="arch" type="xml">
            <tree string="Product Barcode Line" create="false" delete="false" edit="false">
                <field name="name"/>
                <field name="crud"/>
                <field name="err_msg"/>
                <field name="state" />
            </tree>
        </field>
    </record>



</odoo>