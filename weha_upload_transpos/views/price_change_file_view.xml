<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_price_change_file_form" model="ir.ui.view">
        <field name="name">Price Change File Form</field>
        <field name="model">price.change.file</field>
        <field name="arch" type="xml">
            <form string="Price Change File" create="true" delete="true" edit="true">
                <header>
                    <button string="Process File" name="process_download" type="object"
                        class="oe_highlight" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_product_items_line"
                            class="oe_stat_button"
                            icon="fa-shopping-basket"
                            type="object">
                            <field name="items_line_count" widget="statinfo" string="Lines"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field name="file" filename="filename" string="Price Change File"/>
                            <field name="is_use_thread"/>
                        </group>
                        <group>
                            <field name="date_start" />
                            <field name="date_end" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_price_change_file_tree" model="ir.ui.view">
        <field name="name">Price Change File Tree</field>
        <field name="model">price.change.file</field>
        <field name="arch" type="xml">
            <tree string="Price Change File" create="true" delete="true" edit="true">
                <field name="date_start" />
                <field name="filename" />
                <field name="file"/>
                <field name="is_use_thread"/>
                <field name="date_end" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="price_change_file_action" model="ir.actions.act_window">
        <field name="name">Price Change File</field>
        <field name="res_model">price.change.file</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="view_price_change_line_form" model="ir.ui.view">
        <field name="name">Price Change Line Form</field>
        <field name="model">price.change.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Re-Process" name="action_reprocess" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>                        
                        <field name="name"/>               
                        <field name="crud"/>                             
                    </group>s
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_price_change_line_tree" model="ir.ui.view">
        <field name="name">Price Change Line Tree</field>
        <field name="model">price.change.line</field>
        <field name="arch" type="xml">
            <tree string="Price Change Line" create="false" delete="false" edit="false">
                <field name="name"/>
                <field name="crud"/>
                <field name="err_msg"/>
                <field name="state" />
            </tree>
        </field>
    </record>

</odoo>