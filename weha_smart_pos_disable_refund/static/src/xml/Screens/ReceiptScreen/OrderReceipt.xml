<?xml version="1.0" encoding="UTF-8"?> 
<templates id="template" xml:space="preserve">    
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt')]" position="attributes">
            <attribute name="style">position: relative;</attribute>
        </xpath>
        
        <xpath expr="//div[hasclass('pos-receipt')]" position="inside">
            <!-- Watermark -->               
            <t t-if="props.printType === 'reprint'">      
                <div class="watermark">RE-PRINT</div>
                <t t-if="props.order.is_refund === true">      
                    <div class="watermark"><br/><br/>REFUND</div>
                </t>            
                <t t-if="props.order.is_void === true">      
                    <div class="watermark"><br/><br/>REFUND ALL</div>
                </t>     
            </t>              
            <t t-else="">
                <t t-if="props.order.is_refund === true">      
                    <div class="watermark">REFUND</div>
                </t>            
                <t t-if="props.order.is_void === true">      
                    <div class="watermark">REFUND ALL</div>
                </t>      
            </t>                           
            
        </xpath>
        
        <xpath expr="//div[hasclass('orderlines')]" position="before">
            <t t-if="props.printType === 'reprint'">      
                <div style="text-align: center; margin-top: 10px;">
                    <span>--RE-PRINT--</span>
                    <t t-if="props.order.is_refund === true">      
                        <span><br/><br/>--REFUND--</span>
                    </t>            
                    <t t-if="props.order.is_void === true">      
                        <span><br/><br/>--REFUND ALL--</span>
                    </t> 
                </div>    
            </t>              
            <t t-else="">
                <div style="text-align: center; margin-top: 10px;">
                    <t t-if="props.order.is_refund === true">      
                        <span>--REFUND--</span>
                    </t>            
                    <t t-if="props.order.is_void === true">      
                        <span>--REFUND ALL--</span>
                    </t>      
                </div>
            </t>       
        </xpath>    
        
        <xpath expr="//div[hasclass('after-footer')]" position="after">
            <t t-if="props.printType === 'reprint'">      
                <div style="text-align: center; margin-top: 10px;">
                    <span>--RE-PRINT--</span>
                    <t t-if="props.order.is_refund === true">      
                        <span><br/><br/>--REFUND--</span>
                    </t>            
                    <t t-if="props.order.is_void === true">      
                        <span><br/><br/>--REFUND ALL--</span>
                    </t> 
                </div>    
            </t>              
            <t t-else="">
                <div style="text-align: center; margin-top: 10px;">
                    <t t-if="props.order.is_refund === true">      
                        <span>--REFUND--</span>
                    </t>            
                    <t t-if="props.order.is_void === true">      
                        <span>--REFUND ALL--</span>
                    </t>      
                </div>
            </t>        
        </xpath>    
    </t>
</templates>
