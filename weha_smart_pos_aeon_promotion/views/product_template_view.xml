<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Promotions">
                    <field name="product_promotion_ids">
                        <tree>
                            <field name="product_product_id" readonly="1"/>                
                            <field name="pos_promotion_id" readonly="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_product_promotion_tree" model="ir.ui.view">
        <field name="name">product.promotion.tree</field>
        <field name="model">product.promotion</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="product_template_name" />
                <field name="product_product_name" />
                <field name="pos_promotion_name" />
                <field name="pos_promotion_description" />
            </tree>
        </field>
    </record>

    <record id="view_product_promotion_search" model="ir.ui.view">
        <field name="name">product.promotion.search</field>
        <field name="model">product.promotion</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="product_template_id" />
                <field name="product_product_id" />
                <field name="pos_promotion_id" />
            </search>
        </field>
    </record>

    <record id="action_product_promotion" model="ir.actions.act_window">
        <field name="name">Product Promotion</field>
        <field name="res_model">product.promotion</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    

    <menuitem id="menu_pos_product_promotions"
        action="action_product_promotion"
        parent="point_of_sale.pos_config_menu_catalog"
        sequence="7"/>

</odoo>
