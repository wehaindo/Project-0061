<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ExportPaidOrdersPopup" owl="1">
        <Draggable>
            <div class="popup popup-confirm">
                <header class="title drag-handle">
                    Export Paid Orders
                </header>
                <main class="body">
                    <t t-if="state.isPaidOrdersReady">
                        <center><a t-att-download="state.filename" t-att-href="state.url">Download File</a></center>
                    </t>
                    <t t-if="!state.isPaidOrdersReady">
                        <center>Click Generate File Button!</center>
                    </t>
                </main>
                <footer class="footer">
                    <div t-if="!state.isPaidOrdersReady" class="button" t-on-click="generateFile" title="Generate Paid Orders">Generate File</div>
                    <div class="button cancel" t-on-click="cancel">
                        Close
                    </div>
                </footer>
            </div>
        </Draggable>
    </t>
</templates>