	<record id="view_product_product_barcode_tree" model="ir.ui.view">
		<field name="name">product_product_barcode_tree</field>
		<field name="model">product.product.barcode</field>
		<field name="arch" type="xml">
			<tree string="">
				<field name="barcode"/>
				<field name="product_name"/>
				<field name="branch_id"/>
			</tree>
		</field>
	</record>

	<record id="view_product_product_barcode_form" model="ir.ui.view">
		<field name="name">product_product_barcode_form</field>
		<field name="model">product.product.barcode</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<div class="oe_title">
                        <label for="product_id" string="Product Name"/>
                        <h1>
							<div class="d-flex">
								<field class="text-break" name="product_id" placeholder="e.g. Cheese Burger"/>
							</div>
                        </h1>
                    </div>
					<group>
						<group>
							<field name="barcode"/>
						</group>
						<group>
							<field name="branch_id"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>


	<record id="view_product_product_barcode_search" model="ir.ui.view">
		<field name="name">product_product_barcode_search</field>
		<field name="model">product.product.barcode</field>
		<field name="arch" type="xml">
			<search string="">
				<field name="barcode" />
				<field name="product_name" />
			</search>
		</field>
	</record>

	<record id="action_product_product_barcode" model="ir.actions.act_window">
		<field name="name">Product Barcodes</field>
		<field name="res_model">product.product.barcode</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[]</field>
		<field name="context">{}</field>
	</record>

	<menuitem id="menu_pos_product_barcodes"
        action="action_product_product_barcode"
        parent="point_of_sale.pos_config_menu_catalog"
        sequence="6"/>

</odoo>
