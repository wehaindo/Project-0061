<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_view_inherit_product_template" model="ir.ui.view">
		<field name="name">product.template.view.form.inherit</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_only_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//notebook" position="inside">
				<page name="barcodes" string="Barcodes">
                   <field name="barcode_ids" widget="one2many_list">
                       <tree string="Barcodes" editable="bottom">
							<field name="branch_id" />
                           	<field name="barcode"/>
                           	<!-- <field name="lst_price"/> -->
							<field name="product_couchdb_sync" readonly="1"/>
							<field name="product_json" readonly="1"/>
							<field name="product_couchdb_id" readonly="1"/>
							<field name="product_couchdb_rev" readonly="1"/>
							<!-- <button name="remove_product_barcode" string="Delete" type="object" class="oe_highlight"/> -->
                       </tree>
                   </field>
               	</page>
			</xpath>
		</field>
	</record>

