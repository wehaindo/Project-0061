<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_send_messaage_view_form" model="ir.ui.view">
        <field name="name">wizard.send.message.view.form</field>
        <field name="model">wizard.send.message</field>
        <field name="arch" type="xml">
            <form string="">                
                <group>
                    <field name="message"/>
                </group>
                <footer>
                    <button name="send_message" string="Send" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
