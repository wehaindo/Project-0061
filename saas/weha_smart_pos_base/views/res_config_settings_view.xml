<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_view_form_inherit_weha_smart_pos_base" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.weha.smart.pos.base</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h2[@name='pos_interface']" position="before">
                <h2 name="smart_pos_configuration">Smart POS Configuration</h2>
                <div class="row mt16 o_settings_container" id="smart_pos_configuration_section">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_set_control_button_position"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Set Control Button Position</span>
                            <div class="text-muted">
                                Set Control Button Position on Left Screen
                            </div>  
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_show_product_grid"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Show Product Grid</span>
                            <div class="text-muted">
                                Show or Hide Product Grid
                            </div>  
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_only_one_payment_line"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Set Only One Payment Line</span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_backup_order_to_localstorage"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Backup Order to LocalStorage</span>
                        </div>
                    </div>                    
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="use_store_access_rights"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Use Store Access Rights</span>  
                            <br/>
                            <field name="supervisor_ids" widget="many2many_tags" attrs="{'invisible': [('use_store_access_rights','=', False)]}"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_show_refund_button"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Show Refund Button</span>   
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_show_bag_charge"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Show Bag Charge</span>   
                            <br/>
                            <field name="bag_pos_category_id" nolabel="1" attrs="{'invisible': [('is_show_bag_charge','=', False)], 'required':[('is_show_bag_charge','=', True)]}" />  
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_show_pos_global_receipt_logo" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_show_pos_global_receipt_logo" />
                            <div class="text-muted">
                                Global Receipt Logo.
                            </div>
                            <field name="pos_global_receipt_logo_img" class="oe_avatar" widget="image" attrs="{'invisible':[('is_show_pos_global_receipt_logo','=',False)],'required':[('is_show_pos_global_receipt_logo','=',True)]}" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_show_receipt_logo" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_show_receipt_logo" />
                            <div class="text-muted">
                                Show Receipt Logo.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_show_pos_receipt_logo" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_show_pos_receipt_logo" />
                            <div class="text-muted">
                                Pos Config Receipt Logo.
                            </div>
                            <field name="pos_receipt_logo_img" class="oe_avatar" widget="image" attrs="{'invisible':[('is_show_pos_receipt_logo','=',False)],'required':[('is_show_pos_receipt_logo','=',True)]}" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>