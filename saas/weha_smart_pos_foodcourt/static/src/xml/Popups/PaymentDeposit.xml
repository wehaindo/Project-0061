<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PaymentDepositPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <Draggable>
                <div class="popup">
                    <header class="title drag-handle">
                        <t t-esc="props.title" />
                    </header>
                    <div class="div">
                        <img src="/aspl_pos_wallet/static/src/img/add_to_wallet_big.png"/>
                        <h3 align="center">Change</h3>
                        <t t-if="props.change">
                            <h3 class="change_add_to_wallet"><t t-esc="props.change"/></h3>
                       </t>
                    </div>
                    <footer class="footer">
                        <div class="button confirm" t-on-click="confirm">
                            <t t-esc="props.confirmText" />
                        </div>
                        <div class="button skip" t-on-click="on_skip">
                            <t t-esc="props.skipText" />
                        </div>
                        <div class="button cancel" t-on-click="cancel">
                            <t t-esc="props.cancelText" />
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>
