<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PaymentScreenCashDrawer" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('payment-controls')]" position="inside">
            <div t-if='env.pos.config.module_pos_hr and env.pos.get_cashier().allow_open_cash_drawer' 
                 class="button" 
                 t-on-click="open_cash_drawer">
                 <i class='fa fa-archive' /> Open Cashbox
            </div>
        </xpath>
    </t>

</templates>
