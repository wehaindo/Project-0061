            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                    <field name="new_uom_domin"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom'][last()]" position="replace">
                    <field name="product_uom"  domain="[('id','in', new_uom_domin)]" />
                </xpath>
            </field>
        </record> -->

        <record model="ir.ui.view" id="product_template_only_form_view">
            <field name="name">product.template.view.form.easy</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <div name="options" position="inside">
                    <span class="d-inline-block">
                        <field name="has_multi_uom"/>
                        <label for="has_multi_uom"/>
                    </span>
                </div>
                <notebook position="inside">
                    <page name="extra_ingredients" string="Extra Products" attrs="{'invisible':[('has_multi_uom','==', False)]}">
                        <field name="multi_uom_ids">
                            <tree editable="bottom">
                                <field name="business_unit_id"/>
                                <field name="res_branch_id"/>
                                <field name="uom_name"/>
                                <field name="multi_uom_id" required="True"/>
                                <field name="barcode"/>
                                <field name="sequence"/>
                                <field name="price"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>
        <record id="view_pos_pos_form" model="ir.ui.view">
            <field name="name">pos.order.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lines']/tree/field[@name='product_uom_id']" position="replace">
                    <field name="product_uom"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
