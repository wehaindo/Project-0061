<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">product.normal.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">                    
                    <page name="aeon_member" string="AEON Member">
                        <group>
                            <label for="is_member_discount"/>
                            <div>
                                <field name="is_member_discount" class="oe_inline"/>
                                <field name="member_discount_percentage" class="oe_inline" attrs="{'invisible':[('is_member_discount','=',False)]}"/>
                            </div>
                            <label for="is_member_day_discount"/>
                            <div>
                                <field name="is_member_day_discount" class="oe_inline"/>
                                <field name="member_day_discount_percentage" class="oe_inline" attrs="{'invisible':[('is_member_day_discount','=',False)]}"/>
                            </div>
                        </group>    
                    </page>
                    
                </xpath>
            </field>
        </record>
    </data>
</odoo>
