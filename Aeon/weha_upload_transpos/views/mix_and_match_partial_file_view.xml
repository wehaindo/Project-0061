<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_mix_and_match_partial_file_form" model="ir.ui.view">
        <field name="name">Mix And Match Partial File Form</field>
        <field name="model">mix.and.match.partial.file</field>
        <field name="arch" type="xml">
            <form string="Mix And Match Partial File" create="true" delete="true" edit="true">
                <header>
                    <button string="Generate File" name="process_download" type="object"
                        class="oe_highlight" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_lines"
                            class="oe_stat_button"
                            icon="fa-shopping-basket"
                            type="object">
                            <field name="lines_count" widget="statinfo" string="Lines"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="filename" invisible="1" />
                            <field name="file" filename="filename" string="Mix And Match Partial File" />                            
                            <field name="is_use_thread"/>
                        </group>
                        <group>
                            <field name="date_start" />
                            <field name="date_end" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mix_and_match_partial_file_tree" model="ir.ui.view">
        <field name="name">Mix And Match Partial File Tree</field>
        <field name="model">mix.and.match.partial.file</field>
        <field name="arch" type="xml">
            <tree string="Mix And Match Partial File" create="true" delete="true" edit="true">
                <field name="date_start" />
                <field name="filename" />
                <field name="file" />
                <field name="date_end" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="mix_and_match_partial_file_action" model="ir.actions.act_window">
        <field name="name">Mix And Match Partial File</field>
        <field name="res_model">mix.and.match.partial.file</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="view_mix_and_match_partial_line_form" model="ir.ui.view">
        <field name="name">Mix And Match Partial Line Form</field>
        <field name="model">mix.and.match.partial.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Re-Process" name="action_reprocess" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>                        
                        <field name="name"/>               
                        <field name="crud"/>                             
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mix_and_match_partial_line_tree" model="ir.ui.view">
        <field name="name">Mix And Match Partial Line Tree</field>
        <field name="model">mix.and.match.partial.line</field>
        <field name="arch" type="xml">
            <tree string="Line" create="false" delete="false" edit="false">
                <field name="name"/>
                <field name="crud"/>
                <field name="err_msg"/>
                <field name="state" />
                
            </tree>
        </field>
    </record>

</odoo>