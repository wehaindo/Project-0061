<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>			
		<record id="view_generate_r_file_wizard" model="ir.ui.view">
			<field name="name">generate.r.file.wizard</field>
			<field name="model">wizard.gen.r.file</field>
			<field name="arch" type="xml">
				<form string="Generate R File">
					<group>
						<group>
							<field name="name"/>
							<field name="duration"/>
							<!-- <field name="is_copy"/>						 -->
						</group>					
					</group>				
					<footer>
						<button name="trans_generate_r_file" string="Generate" type="object" class="btn-primary"/>
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_generate_r_file" model="ir.actions.act_window">
			<field name="name">Generate R File</field>
			<field name="res_model">wizard.gen.r.file</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem id="menu_generate_r_file" name="Generate R File" action="action_generate_r_file" parent="process_file_menu" sequence="2"/>
		
	</data>
</odoo>
