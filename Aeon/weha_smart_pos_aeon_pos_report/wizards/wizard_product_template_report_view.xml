<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_product_template_report_view" model="ir.ui.view">
        <field name="name">wizard.product.template.report.form</field>
        <field name="model">wizard.product.template.report</field>
        <field name="arch" type="xml">
            <form string="Pos Payment Report">
                <group>
                    <group>
                        <field name="store_id"/>
                    </group>
                    <group>                        
                    </group>                                        
                </group>                 
                <footer>
                    <button name="generate_report" string="Download" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_product_template_report" model="ir.actions.act_window">
        <field name="name">POS Product Template Report</field>
        <field name="res_model">wizard.product.template.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_product_template_report" name="Product Template Report" action="action_wizard_product_template_report" parent="point_of_sale.menu_point_rep" sequence="12"/>

</odoo>
