<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_prima_session_report_view_form" model="ir.ui.view">
        <field name="name">wizard.prima.session.report.view.form</field>
        <field name="model">wizard.prima.session.report</field>
        <field name="arch" type="xml">
            <form string="">                
                <group>
                    <group>
                        <field name="date_start"/>    
                    </group>
                    <group>
                        <field name="date_end"/>    
                    </group>
                </group>
                <footer>
                    <button name="generate_report" string="Generate" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_prima_session_report" model="ir.actions.act_window">
        <field name="name">Wizard Prima Session report</field>
        <field name="res_model">wizard.prima.session.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
</odoo>
