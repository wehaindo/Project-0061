<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">        
        <xpath expr="//div[hasclass('pos-receipt')]" position="attributes">
            <attribute name="style">display:block;</attribute>
        </xpath>

        <xpath expr="//div[hasclass('pos-receipt')]" position="inside">
            <t t-foreach="receipt.paymentlines" t-as="line" t-key="line.cid">
                <t t-if="line.is_prima">
                    <div style="page-break-before:always;margin-top:30px;margin-bottom:30px;">
                        <div style="text-align:center;font-size:24px;margin-bottom:10px;">Prima QRIS Payment</div>                             
                        <table>
                            <tr>
                                <td>Receipt</td>
                                <td>:</td>
                                <td><span t-esc="line.order_name"/></td>
                            </tr>
                            <tr>
                                <td>Session</td>
                                <td>:</td>
                                <td><span t-esc="line.session_name"/></td>
                            </tr>
                            <tr>
                                <td>Cashier</td>
                                <td>:</td>
                                <td><span t-esc="line.user_name"/></td>
                            </tr>
                            <tr>
                                <td>Tanggal</td>
                                <td>:</td>
                                <td><span t-esc="line.creation_date"/></td>
                            </tr>
                            <tr>
                                <td>Amount</td>
                                <td>:</td>
                                <td><span t-esc="env.pos.format_currency(line.amount)"/></td>
                            </tr>
                            <tr>
                                <td>TID</td>
                                <td>:</td>
                                <td><span t-esc="line.terminal_id"/></td>
                            </tr>
                            <tr>
                                <td>MID</td>
                                <td>:</td>
                                <td><span t-esc="line.merchant_id"/></td>
                            </tr>
                            <tr>
                                <td>Ref No</td>
                                <td>:</td>
                                <td><span t-esc="line.reference_no"/></td>
                            </tr>
                        </table>
                        <!-- <div>Receipt : <span t-esc="line.order_name"/></div>                                             -->
                        <!-- <div>Session : <span t-esc="line.session_name"/></div> -->
                        <!-- <div>Cashier : <span t-esc="line.user_name"/></div> -->
                        <!-- <div>Tanggal : <span t-esc="line.creation_date"/></div>                         -->
                        <!-- <div>Amount  : <span t-esc="env.pos.format_currency(line.amount)"/></div> -->
                        <!-- <div>TID     : <span t-esc="line.terminal_id"/></div>                 -->
                        <!-- <div>MID     : <span t-esc="line.merchant_id"/></div>                 -->
                        <!-- <div>MPAN    : <span t-esc="line.pan"/></div>                 -->
                        <!-- <div>Ref No  : <span t-esc="line.reference_no"/></div>                                                       -->
                        <!-- <div>
                            <t t-esc="line.name" />                     
                            <span t-esc="env.pos.format_currency__symbol(line.amount)" class="pos-receipt-right-align"/>
                        </div>                         -->
                    </div>
                </t>
            </t>            
        </xpath>
    </t>
</templates>
