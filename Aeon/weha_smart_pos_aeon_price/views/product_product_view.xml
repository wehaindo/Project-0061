<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Update Store Product" name="action_update_store_product" type="object"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Price Store">
                    <field name="product_template_price_ids">
                        <tree>
                            <field name="res_branch_id" readonly="1"/>                
                            <field name="product_name" readonly="1"/>
                            <field name="list_price" readonly="1"/>         
                            <button name="action_update_store_product" string="Sync" type="object" class="oe_highlight"/>                   
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_template_price_view_tree" model="ir.ui.view">
        <field name="name">product.template.price.view.tree</field>
        <field name="model">product.template.price</field>
        <field name="arch" type="xml">
            <tree string="Product Template Price" create="false" edit="false" delete="false">
                <field name="res_branch_id" readonly="1"/>                
                <field name="product_name" readonly="1"/>
                <field name="list_price"/>
                <field name="member_price" />
            </tree>
        </field>
    </record>

    <record id="product_template_price_view_form" model="ir.ui.view">
        <field name="name">product.template.price.form</field>
        <field name="model">product.template.price</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_template_id"/>
                            <field name="product_name"/>                            
                        </group>     
                        <group>
                            <field name="res_branch_id"/>
                            <field name="list_price"/>
                            <field name="member_price"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_template_price_view_search" model="ir.ui.view">
        <field name="name">product.template.price.view.search</field>
        <field name="model">product.template.price</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="res_branch_id"/>
                <field name="product_name"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_res_branch_id" string="Store" domain="[]"  context="{'group_by':'res_branch_id'}"/>
                    <filter name="group_by_product_template_id" string="Product" domain="[]"  context="{'group_by':'product_template_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_product_template_price" model="ir.actions.act_window">
        <field name="name">Store Product Price</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template.price</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
        <field name="domain">[]</field>
        <field name="context">{'search_default_group_by_res_branch_id': 1}</field>
        <field name="help" type="html">
            <p>Create for Store Product Price</p>
        </field>
    </record>
    
    <menuitem id="menu_product_template_price"
        name="Store Product Price"
        parent="weha_smart_pos_aeon_price.pos_product_price_management_menu"        
        action="action_product_template_price"
        sequence="0"
        groups="point_of_sale.group_pos_manager"/>

    
</odoo>
