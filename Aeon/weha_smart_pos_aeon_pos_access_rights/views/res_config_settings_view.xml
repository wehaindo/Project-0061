<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_view_form_inherit_weha_smart_pos_access_rights" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.weha.smart.pos.access.rights</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_interface_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="use_store_access_rights"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Use Store Access Rights</span>  
                        <br/>
                        <field name="supervisor_ids" widget="many2many_tags" attrs="{'invisible': [('use_store_access_rights','=', False)]}"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>