<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PaymentScreenPaymentLines" t-inherit="point_of_sale.PaymentScreenPaymentLines" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='paymentline electronic_payment']" position="inside">
            <t t-elif="line.payment_status == 'waiting_qris'">
                <div class="electronic_status">
                    Waiting for Qris Payment
                </div>
                <div class="button send_payment_request highlight" title="Check Payment QRIS" t-on-click="() => this.trigger('check-payment-qris', line)">
                    Check
                </div>
            </t>
            <t t-elif="line.payment_status == 'waiting_manual_input'">
                <div class="electronic_status">
                    Waiting Input
                </div>
                <div class="button send_payment_request highlight" title="Manual Input" t-on-click="() => this.trigger('input-manual-popup', line)">
                    Input
                </div>
            </t>
            <t t-elif="line.payment_status == 'waiting_manual_qris'">
                <div class="electronic_status">
                    Waiting Input
                </div>
                <div class="button send_payment_request highlight" title="Manual Input" t-on-click="() => this.trigger('input-qris-popup', line)">
                    Input
                </div>
            </t>
        </xpath>
    </t>
</templates>