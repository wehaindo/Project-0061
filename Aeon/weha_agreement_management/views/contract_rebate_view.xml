<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_contract_rebate_form" model="ir.ui.view">
        <field name="name">Contract Rebate Form</field>
        <field name="model">contract.rebate</field>
        <field name="arch" type="xml">
            <form string="Rebate" create="false" delete="false" edit="false">
                <sheet>
                    <div class="oe_title">
                        <label for="code" class="oe_edit_only" />
                        <h1>
                            <field name="code" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="deduction_id" />
                            <field name="expenses_type" />
                            <field name="rebate_value" />
                            <field name="calculate_from" />
                            <field name="payment_periode" />
                            <field name="date_year" />
                        </group>
                        <group>
                            <field name="store_id" />
                            <field name="supplier_id" readonly="1" />
                            <field name="contract_id" readonly="1" />
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                    </group>
                    <!-- <field name="rebate_line_ids">
                        <tree string="Rebate Lines" create="true" delete="false" edit="true"
                            editable="bottom">
                            <field name="amount_from" />
                            <field name="amount_to" />
                            <field name="percent" />
                        </tree>
                    </field> -->
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_contract_rebate_tree" model="ir.ui.view">
        <field name="name">Contract Rebate Tree</field>
        <field name="model">contract.rebate</field>
        <field name="arch" type="xml">
            <tree string="Rebate" create="false" delete="false" edit="false">
                <!-- <field name="code" /> -->
                <field name="supplier_id" />
                <field name="store_id" />
                <field name="contract_id" />
                <field name="deduction_id" />
                <field name="expenses_type" />
                <field name="calculate_from" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="date_year" />
                <field name="rebate_value" sum="Total Rebate"/>
                <field name="payment_periode" />
            </tree>
        </field>
    </record>

    <!-- Search view for "model" -->
    <record id="view_contract_rebate_search" model="ir.ui.view">
        <field name="name">Contract Rebate Search</field>
        <field name="model">contract.rebate</field>
        <field name="arch" type="xml">
            <search string="Rebate">
                <field name="supplier_id"/>
                <field name="store_id"/>
                <group expand="0" string="Group By">
                    <filter string="Contract" name="group_by_contract" domain="[]" context="{'group_by':'contract_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="contract_rebate_action" model="ir.actions.act_window">
        <field name="name">Contract Rebate</field>
        <field name="res_model">contract.rebate</field>
        <field name="context">{'search_default_group_by_contract': 1,}</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>