<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- Form view for "model" -->
    <record id="view_conces_form" model="ir.ui.view">
        <field name="name">view.conces.form</field>
        <field name="model">contract.conces.settlement</field>
        <field name="arch" type="xml">
            <form string="Profit Details" create="false" delete="false" edit="false">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted" />
                </header>
                <sheet>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" class="oe_inline" placeholder="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" />
                            <field name="agreement_contract_id" />
                            <field name="supplier_id" />
                            <field name="payment_term_id" />
                        </group>
                        <group>
                            <field name="total" />
                        </group>
                    </group>
                    <group string="Lines" />
                    <field name="conces_settlement_line_ids" options="{'no_create': True}">
                        <tree>
                            <field name="product_id" />
                            <field name="store_id" />
                            <field name="name" />
                            <field name="qty" />
                            <field name="unit_price" />
                            <field name="discount" />
                            <field name="subtotal" />
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_conces_tree" model="ir.ui.view">
        <field name="name">view.conces.tree</field>
        <field name="model">contract.conces.settlement</field>
        <field name="arch" type="xml">
            <tree string="Profit Details" create="false" delete="false" edit="false">
                <field name="date" />
                <field name="agreement_contract_id" />
                <field name="supplier_id" />
                <field name="payment_term_id" />
            </tree>
        </field>
    </record>

    <!-- Search view for "model" -->
    <record id="view_conces_search" model="ir.ui.view">
        <field name="name">view.conces.search</field>
        <field name="model">contract.conces.settlement</field>
        <field name="arch" type="xml">
            <search string="Profit Details">
                <field name="name" />
            </search>
        </field>
    </record>

    <!-- Main window action for "model" -->
    <record id="action_conces_settlement" model="ir.actions.act_window">
        <field name="name">Profit Details</field>
        <field name="res_model">contract.conces.settlement</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_conces_search" />
    </record>

</odoo>