<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
<!--        form view       -->
        <record id="view_product_sub_category_form" model="ir.ui.view">
            <field name="name">product.sub.category.form</field>
            <field name="model">product.sub.category</field>
            <field name="arch" type="xml">
                <form string="Sub Category">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="code"/>
                            <field name="description"/>
                            <field name="product_category_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
<!--        tree view       -->
        <record id="view_product_sub_category_tree" model="ir.ui.view">
            <field name="name">product.sub.category.tree</field>
            <field name="model">product.sub.category</field>
            <field name="arch" type="xml">
                <tree string="Sub Category" sample="1">
                    <field name="code"/>
                    <field name="name"/>                    
                    <field name="product_category_id"/>
                </tree>
            </field>
        </record>

        <record id="action_res_product_sub_category_form" model="ir.actions.act_window">
            <field name="name">Sub Product Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.sub.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new Sub Category
              </p><p>
                Create and manage Sub Category for the companies that will be managed by Odoo from here.
              </p>
            </field>
        </record>
<!--        Menu item       -->
        <menuitem action="action_res_product_sub_category_form" id="menu_action_res_product_sub_category_form" parent="stock.menu_product_in_config_stock" sequence="3"/>
    </data>
</odoo>