<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_product_category_file_form" model="ir.ui.view">
        <field name="name">Product Category File Form</field>
        <field name="model">product.category.file</field>
        <field name="arch" type="xml">
            <form string="Product Category File" create="true" delete="true" edit="true">
                <header>                    
                    <button string="Generate File" name="process_download" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field name="file" filename="filename" string="Product Category File"/>
                            <field name="is_use_thread"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_category_file_tree" model="ir.ui.view">
        <field name="name">Product Category File Tree</field>
        <field name="model">product.category.file</field>
        <field name="arch" type="xml">
            <tree string="Product Category File" create="true" delete="true" edit="true">
                <field name="filename" />
                <field name="file" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="product_category_file_action" model="ir.actions.act_window">
        <field name="name">Product Category File</field>
        <field name="res_model">product.category.file</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>