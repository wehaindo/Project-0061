    <t t-name="CustomerFacingDisplayOrderLines" t-inherit="point_of_sale.CustomerFacingDisplayOrderLines" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos_orderlines')]" position="replace">
            <div class="pos_orderlines">
                <div class="pos_orderlines_header">   
                    <div class="card" style="margin-bottom:10px;">
                        <img src="/weha_smart_pos_login/static/src/img/aeon_log.jpg" class="card-img-top" alt="..."/>
                        <div class="card-body">
                          <h5 class="card-title"><t t-esc="pos.config.res_branch_id[1]"/></h5>
                          <p class="card-text"><t t-esc="pos.get_cashier()['name']"/></p>                         
                        </div>
                      </div>
                </div>
                <div class="pos_orderlines_list">
                    <t t-if="order">
                        <div t-foreach="order.get_orderlines()" t-as="orderline" class="pos_orderlines_item">
                            <div class="row">
                                <label class="text-align-top"><t t-esc="orderline.get_quantity()"/> x</label>
                                <br/>
                                <br/>
                            </div>                            
                            <div class="row">
                                <label class="text-align-top" t-esc="orderline.get_full_product_name()"/>                                
                                <t t-if="orderline.get_price_source() == 'list_price'">
                                    <br/><span class="badge badge-primary">Normal Price</span>                                   
                                </t>
                                <t t-if="orderline.get_price_source() == 'pdc'">
                                    <br/><span class="badge badge-primary">PDC</span>                                    
                                </t>
                                <t t-if="orderline.get_price_source() == 'pdcm'">
                                    <br/><span class="badge badge-primary">PDCM</span>                                   
                                </t>                                
                                <t t-if="orderline.get_price_source() == 'mix_and_match'">
                                    <br/><span class="badge badge-primary">Mix and Match</span>                                 
                                </t>
                                <t t-if="orderline.get_discount_type() == 'memberday'">
                                    <br/>AEON Member Day Discount : <t t-esc="orderline.get_discount_str()"/>%
                                </t>                                              
                                <t t-if="orderline.get_discount_type() == 'rtc'">
                                    <br/>RTC Discount : <t t-esc="orderline.get_discount_str()"/>% 
                                </t>                  
                            </div>                            
                            <div class="row">
                                <label class="text-align-top text-center">@ <t t-esc="pos.format_currency_no_symbol(orderline.get_list_price())"/></label>
                                <br/>
                                <br/>
                            </div>
                            <div class="row">
                                <label class="text-align-top" style="text-align: right;" t-esc="pos.format_currency_no_symbol(orderline.get_list_price() * orderline.get_quantity())"/>
                                <br/>
                                <br/>
                            </div>                            
                        </div>
                    </t>
                </div>
                
                <div class="pos-orderlines_payment_info">
                    <div class="pos-orderlines_payment_info_details">
                        <!-- <div class="pos-paymentlines">
                            <div>
                                <span class="pos-change_title">Total Items</span>
                            </div>
                            <div>
                                <span class="pos-change_amount" t-esc="order.get_totalitem()"/>
                            </div>
                        </div>
                        <div class="pos-paymentlines">
                            <div>
                                <span class="pos-change_title">Total Quantity</span>
                            </div>
                            <div>
                                <span class="pos-change_amount" t-esc="order.get_totalquantity()"/>
                            </div>
                        </div>                                                 -->
                        <!-- Order Total -->

                        <div class="pos-paymentlines">
                            <div>
                                <span class="pos-change_title">Total (<t t-esc="order.get_totalitem()"/> items)</span>
                            </div>
                            <div>
                                <span class="pos-change_amount" t-esc="pos.format_currency_no_symbol(order and order.get_total_without_discount() || 0)"/>
                            </div>
                        </div>           
                        <div class="pos-total">
                            <div>
                                <span class="total-amount-formatting" style="font-size:2.5vw">TOTAL</span>
                            </div>
                            <div>
                                <span class="pos_total-amount" style="font-size:2.5vw" t-esc="pos.format_currency_no_symbol(order and order.get_total_with_tax() || 0)"/>
                            </div>
                        </div>    
                        <div class="pos-paymentlines">
                            <div>
                                <span class="pos-change_title">Total Disc</span>
                            </div>
                            <div>
                                <span class="pos-change_amount" t-esc="pos.format_currency_no_symbol(order and order.get_total_discount() || 0)"/>
                            </div>
                        </div>                            
                        <!-- Paymentlines -->
                        <!-- <t t-call="CustomerFacingDisplayPaymentLines"/> -->

                        <!-- Odoo Logo -->
                        <div class="pos-odoo_logo_container"/>
                    </div>
                </div>
            </div>
