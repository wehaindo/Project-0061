<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_pos_order_line_pos_note_module" model="ir.ui.view">
        <field name="name">pos.order.line.pos.note</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty']" position="before">
                <field name="line_note" />
            </xpath>
        </field>
    </record>

    <record id="sh_pos_order_pos_note" model="ir.ui.view">
        <field name="name">pos.order.pos.note</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='note']" position="after">
                <field name="order_note" />
            </xpath>
        </field>
    </record>
</odoo>
