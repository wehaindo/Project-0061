<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="sh_pos_res_config_settings_enable_rounding" model="ir.ui.view">
        <field name="name">pos.config.settings.enable.rounding</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='accounting_section']" position="after">
                <h3>Enable Rounding</h3>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-6 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_enable_rounding" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_enable_rounding" />
                            <div class="text-muted">
                                Rounding pos order total.
                            </div>
                            <label for="rounding_type" attrs="{'invisible':[('sh_enable_rounding','=',False)],'required':[('sh_enable_rounding','=',True)]}" />
                            <field name="rounding_type" widget="radio" attrs="{'invisible':[('sh_enable_rounding','=',False)],'required':[('sh_enable_rounding','=',True)]}" />
                            <br />
                            <label for="round_product_id" attrs="{'invisible':[('sh_enable_rounding','=',False)],'required':[('sh_enable_rounding','=',True)]}" />
                            <field name="round_product_id" attrs="{'invisible':[('sh_enable_rounding','=',False)],'required':[('sh_enable_rounding','=',True)]}" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
