<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_pos_config_quick_print" model="ir.ui.view">
        <field name="name">pos.config.quick.print</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <h2>Quick Print Receipt</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-6 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_is_quick_receipt_print" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_is_quick_receipt_print" />
                            <br />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
