<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="AllNoteScreen" owl="1">
        <div class="orderlist-screen screen">
            <div class="screen-content">
                <section class="top-content">
                    <div class="button new-note" role="img" aria-label="Add a Note" t-on-click="trigger('click-global-note')" title="Add a Note">
                        <t t-if="!env.isMobile">
                            Create
                        </t>
                        <t t-else="">
                            <i class="fa fa-plus"></i>
                        </t>
                    </div>
                    <div class="button back" t-on-click="back">
                        <t t-if="!env.isMobile">Discard</t>
                        <t t-else="">
                            <i class="fa fa-undo"></i>
                        </t>
                    </div>
                </section>
                <section class="full-content sh_note_full_content">
                    <div class="window">
                        <section class="subwindow">
                            <div class="subwindow-container">
                                <div class="subwindow-container-fix touch-scrollable scrollable-y order-list-scroll sh_pre_define_note_list">
                                    <table class="sh_pre_define_note_table">
                                        <thead>
                                            <tr>
                                                <th width="88%">Note</th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody class="template-list-contents">
                                            <t t-foreach="allpredfinenotecontents" t-as="pre_define_note">
                                                <TemplatePreDefineNoteLine pre_define_note="pre_define_note" />
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </t>

    <t t-name="TemplatePreDefineNoteLine" owl="1">
        <tr t-att-data-id="props.pre_define_note.uid">
            <td class="name_td">
                <span class="input_name"><input type="text" t-att-value="props.pre_define_note.display_name" class="input_tag_name" /></span>
                <span class="note_name"><t t-esc="props.pre_define_note.display_name" /></span>
            </td>
            <td class="remove_icon" t-att-data-id="props.pre_define_note.uid" t-on-click="delete_note">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </td>
            <td class="edit_note" t-if="state.detailIsShown" t-att-data-id="props.pre_define_note.uid" t-on-click="edit_note">
                <i class="fa fa-pencil edit_icon" aria-hidden="true"></i>
            </td>

            <td class="save_icon" t-if="!state.detailIsShown" t-att-data-id="props.pre_define_note.uid" t-on-click="save_note">
                <i class="fa fa-floppy-o"></i>
            </td>
        </tr>
    </t>

    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('paymentmethods')]" position="after">
            <t t-if="env.pos.config.display_order_note_payment">
                <div class="pymnt_header_note">Global Note :</div>
                <div class="payment_order_note">
                    <textarea id="payment_note_textarea" row="3" cols="4"><t t-esc="env.pos.get_order().get_global_note()"/></textarea>
                </div>
            </t>
        </xpath>
    </t>
</templates>
