<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-if='receipt.company.logo']" position="after">
         <center style="font-size: 16px"> Pedido No :  <t t-esc="env.pos.get_order().pos_recept_name" /></center>
        </xpath>
        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="inside">
            <div>
                <t t-if="env.pos.config.sh_pos_receipt_invoice and env.pos.get_order().invoice_number">
                    <br />
                    <div>--------------------------------</div>
                    INV number: <t t-esc="env.pos.get_order().invoice_number" />
                    <div>--------------------------------</div>
                </t>
            </div>
            <div class="sh_customer_detail">
                <t t-if="env.pos.config.sh_pos_receipt_customer_detail">
                    <t t-if="receipt.client">                        
                        <br />
                        <t t-if="env.pos.config.sh_pos_receipt_customer_name">
                            <div class="sh_customer_name">Cliente : <t t-esc="env.pos.db.partner_by_id[env.pos.get_order().get_client().id].name" /></div>
                        </t>
                        <t t-if="env.pos.config.sh_pos_receipt_customer_address">
                            <t t-if="env.pos.get_order() and env.pos.get_order().get_client() and env.pos.db.partner_by_id[env.pos.get_order().get_client().id].address">
                                <div class="sh_customer_address">Direccion : <t t-esc="env.pos.db.partner_by_id[env.pos.get_order().get_client().id].address" /></div>
                            </t>
                        </t>
                        <t t-if="env.pos.config.sh_pos_receipt_customer_mobile">
                            <t t-if="env.pos.get_order() and env.pos.get_order().get_client() and env.pos.db.partner_by_id[env.pos.get_order().get_client().id].mobile">
                                <div class="sh_customer_mobile">Celular : <t t-esc="env.pos.db.partner_by_id[env.pos.get_order().get_client().id].mobile" /></div>
                            </t>
                        </t>
                        <t t-if="env.pos.config.sh_pos_vat">
                            <t t-if="env.pos.get_order() and env.pos.get_order().get_client() and env.pos.db.partner_by_id[env.pos.get_order().get_client().id].vat">
                                <div class="sh_pos_vat">
                                    <t t-if='env.pos.config.sh_pos_vat_name'>
                                        <t t-esc="env.pos.config.sh_pos_vat_name" /> :
                                    </t>
                                    <t t-else=""> Vat : </t> 
                                    <t t-esc="env.pos.db.partner_by_id[env.pos.get_order().get_client().id].vat" />
                                </div>
                            </t>
                        </t>
                        <t t-if="env.pos.config.sh_pos_receipt_customer_phone">
                            <t t-if="env.pos.get_order() and env.pos.get_order().get_client() and env.pos.db.partner_by_id[env.pos.get_order().get_client().id].phone">
                                <div class="sh_customer_mobile">Telefono : <t t-esc="env.pos.db.partner_by_id[env.pos.get_order().get_client().id].phone" /></div>
                            </t>
                        </t>
                        
                        <t t-if="env.pos.config.sh_pos_receipt_customer_email">
                            <t t-if="env.pos.get_order() and env.pos.get_order().get_client() and env.pos.db.partner_by_id[env.pos.get_order().get_client().id].email">
                                <div class="sh_customer_mobile">Email : <t t-esc="env.pos.db.partner_by_id[env.pos.get_order().get_client().id].email" /></div>
                            </t>
                        </t>
                    </t>
                </t>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('pos-receipt-order-data')]" position="after">
            <div class="sh_receipt_footer">
                <t t-if="env.pos.config.sh_pos_receipt_bacode_qr and env.pos.config.sh_pos_receipt_barcode_qr_selection == 'barcode'">
                    <img id="barcode"/>
                </t>
                <t t-if="env.pos.config.sh_pos_receipt_bacode_qr and env.pos.config.sh_pos_receipt_barcode_qr_selection == 'qr'">
                	<div id="qr_code"></div>
                </t>
                <t t-if="!env.pos.config.sh_pos_receipt_bacode_qr or (env.pos.config.sh_pos_receipt_barcode_qr_selection == 'qr' and env.pos.config.sh_pos_receipt_barcode_qr_selection == 'barcode')">
                    <t t-esc="receipt.name" />
                </t>
            </div>
        </xpath>
    </t>
</templates>
