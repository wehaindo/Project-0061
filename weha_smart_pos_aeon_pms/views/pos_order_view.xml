<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pos_order_tree_inherit" model="ir.ui.view">
        <field name="name">pos.order.tree.view.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="aeon_member" />
            </field>
        </field>
    </record>

    <record id="view_pos_pos_form_inherit" model="ir.ui.view">
        <field name="name">pos.order.form.view.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_point_claim" string="Point Claim" type="object"/>
            </xpath>            
            <field name="partner_id" position="after">
                <field name="aeon_member" readonly="1" />
                <field name="aeon_member_day" readonly="1" />
                <field name="point_claim" readonly="1"/>
            </field>
        </field>
    </record>
</odoo>
