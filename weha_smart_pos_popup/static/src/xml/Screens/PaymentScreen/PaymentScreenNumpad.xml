<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PaymentScreenNumpad" t-inherit="point_of_sale.PaymentScreenNumpad" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='numpad']" position="replace">
            <div class="numpad-payment">
                <PSNumpadInputButton value="'1'" />
                <PSNumpadInputButton value="'2'" />
                <PSNumpadInputButton value="'3'" />
                <PSNumpadInputButton value="'+1000'" changeClassTo="'mode-button'" />
                <PSNumpadInputButton value="'+20000'" changeClassTo="'mode-button'" />
                <PSNumpadInputButton value="'4'" />
                <PSNumpadInputButton value="'5'" />
                <PSNumpadInputButton value="'6'" />
                <PSNumpadInputButton value="'+2000'" changeClassTo="'mode-button'" />
                <PSNumpadInputButton value="'+50000'" changeClassTo="'mode-button'" />
                <PSNumpadInputButton value="'7'" />
                <PSNumpadInputButton value="'8'" />
                <PSNumpadInputButton value="'9'" />
                <PSNumpadInputButton value="'+5000'" changeClassTo="'mode-button'" />
                <PSNumpadInputButton value="'+100000'" changeClassTo="'mode-button'" />
                <PSNumpadInputButton value="'-'" text="'+/-'" />
                <PSNumpadInputButton value="'0'" />
                <PSNumpadInputButton value="decimalPoint" />
                <PSNumpadInputButton value="'+10000'" changeClassTo="'mode-button'" />
                <PSNumpadInputButton value="'Backspace'">
                    <img src="/point_of_sale/static/src/img/backspace.png" width="24" height="21"
                        alt="Backspace" />
                </PSNumpadInputButton>
            </div>
        </xpath>
    </t>
</templates>
