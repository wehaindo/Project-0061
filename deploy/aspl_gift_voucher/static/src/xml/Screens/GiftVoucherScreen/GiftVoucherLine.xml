<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="GiftVoucherLine" owl="1">
        <div class="order-row pointer" t-attf-class="client-line {{highlight}}"
             t-on-click="() => this.trigger('click-voucher-line', props.gift_voucher)">
            <div class="col start">
                <t t-esc="props.gift_voucher.voucher_name"/>
            </div>
            <div class="col start">
                <t t-esc="props.gift_voucher.voucher_code"/>
            </div>
            <div class="col start">
                <t t-esc="env.pos.format_currency(props.gift_voucher.voucher_amount)"/>
            </div>
        </div>
    </t>

</templates>