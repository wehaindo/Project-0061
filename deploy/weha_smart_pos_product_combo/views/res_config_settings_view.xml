<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_view_form_inherit_weha_smart_pos_default_customer" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.weha.smart.pos.default.customer</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_interface_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="use_combo"/>
                    </div>
                    <div class="o_setting_right_pane" >
                        <label for="use_combo" string='Use combo in POS'/>
                        
                        <div class="content-group" attrs="{'invisible':[('use_combo','!=', True)]}">

                            <div class="mt16">
                                <label for="combo_pack_price" string="Total Combo Price"/>
                                <div class="text-muted">
                                    Combo Price
                                </div>
                            </div>
                            <field name="combo_pack_price" widget="radio"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>