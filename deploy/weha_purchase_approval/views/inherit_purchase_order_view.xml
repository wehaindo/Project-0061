<odoo>
    <record id="inherited_purchase_order_view_form" model="ir.ui.view">
        <field name="name">inherited.purchase.order</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <!-- find field description and add the field
             new_field after it -->
            <xpath expr="//button[@name='button_confirm'][2]" position="replace">

            </xpath>
            <xpath expr="//header" position="inside">
                <button string="Send Approval" type="object" name="action_send_approval"
                    class="oe_highlight"
                    groups="purchase.group_purchase_user" states="draft" />

                <button string="Approve" type="object" name="action_approval_manager" class="oe_highlight"
                    groups="weha_purchase_approval.group_purchase_assistant_manager" states="waiting_approval_manager" />
                <button string="Reject" type="object" name="action_reject" class="oe_highlight"
                    groups="weha_purchase_approval.group_purchase_assistant_manager" states="waiting_approval_manager" />

                <button string="Approve" type="object" name="action_approval_senior" class="oe_highlight"
                    groups="weha_purchase_approval.group_purchase_senior_manager" states="waiting_approval_senior" />
                <button string="Reject" type="object" name="action_reject" class="oe_highlight"
                    groups="weha_purchase_approval.group_purchase_senior_manager" states="waiting_approval_senior" />
            </xpath>
        </field>
    </record>


</odoo>