<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_view_form_inherit_weha_smart_pos_base" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.weha.smart.pos.base</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_interface_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_allow_delete_unpaid_order"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Allow Delete Unpaid Order</span>
                        <div class="text-muted">
                            Allow Cashier to delete unpaid order in case have problem validate pos order
                        </div>  
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_allow_delete_paid_order"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Allow Delete Paid Order</span>
                        <div class="text-muted">
                            Allow Cashier to delete paid order in case have problem validate pos order
                        </div>  
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_allow_export_unpaid_order"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Allow Export Unpaid Order</span>
                        <div class="text-muted">
                            Allow Cashier to export unpaid order in case have problem validate pos order and need to backup
                        </div>  
                    </div>
                </div><div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_allow_export_paid_order"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Allow Export Paid Order</span>
                        <div class="text-muted">
                            Allow Cashier to export paid order in case have problem validate pos order and need to backup
                        </div>  
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_allow_import_order"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Allow Import Order</span>
                        <div class="text-muted">
                            Allow Cashier to import export order to restore after delete order
                        </div>  
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>