<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_view_form_inherit_weha_smart_pos_aeon_price" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.weha.smart.pos.aeon.price</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">            
            <xpath expr="//div[@id='pos_interface_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="allow_price_override"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Allow Price Override</span>
                   </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div class="row mt16" attrs="{'invisible': [('is_default_pricelist_displayed', '=', False)]}">
                            <label string="Member Pricelist" for="pos_pdcm_pricelist_id" class="col-lg-3 o_light_label"/>
                            <field name="pos_pdcm_pricelist_id" domain="[('id', 'in', pos_allowed_pricelist_ids)]" options="{'no_create': True}"/>
                        </div>
                   </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
