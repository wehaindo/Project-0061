        <field name="name">Outright Settlement</field>
        <field name="sequence" eval="10" />
        <field name="action" ref="action_outright_act_window" />
        <field name="parent_id" ref="agreement_rebate.agreement_rebate_settlement_menu_root" />
    </record> -->

</odoo>