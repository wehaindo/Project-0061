<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- VIEWS: "Human readable name"
    
        - Model·········: model
        - _rec_name·····: name
        - Domain········: []
        - Context·······: \{}
        - Parent menu ··: base.menu_custom
        - View priority·: 16    
        - Sequence····..: 10
        - Action help···: Something about model
    - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <!-- Tree view for "model" -->
    <record id="view_outright_tree" model="ir.ui.view">
        <field name="name">view.outright.tree</field>
        <field name="model">contract.outright.settlement</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <tree string="Outright Settlement" create="false" delete="false" edit="false">
                <field name="name" />
                <field name="date" />
                <field name="date_from" />
                <field name="date_to" />

            </tree>
        </field>
    </record>

    <!-- Form view for "model" -->
    <record id="view_outright_form" model="ir.ui.view">
        <field name="name">view.outright.form</field>
        <field name="model">contract.outright.settlement</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <form string="Outright Settlement" create="false" delete="false" edit="false">
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" class="oe_inline"
                                placeholder="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="date" />
                        <field name="date_from" />
                        <field name="date_to" />
                    </group>
                    <field name="outright_settlement_line_ids" widget="many2many"
                        options="{'no_create': True}">
                        <tree>
                            <field name="purchase_id" />
                            <field name="partner_id" />
                            <field name="agreement_id" />
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for "model" -->
    <record id="view_outright_search" model="ir.ui.view">
        <field name="name">view.outright.search</field>
        <field name="model">contract.outright.settlement</field>
        <field name="type">search</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <search string="Outright">
                <field name="name" />

            </search>
        </field>
    </record>

    <!-- Main window action for "model" -->
    <record id="action_outright_act_window" model="ir.actions.act_window">
        <field name="name">Outright Settlement</field>
        <field name="res_model">contract.outright.settlement</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_outright_search" />
    </record>

    <!-- Main menu for "model" -->
