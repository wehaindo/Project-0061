<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- Form view for "model" -->
    <record id="view_outright_form" model="ir.ui.view">
        <field name="name">view.outright.form</field>
        <field name="model">contract.outright.settlement</field>
        <field name="arch" type="xml">
            <form string="Rebate Details" create="false" delete="false" edit="false">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted" />
                </header>
                <sheet>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" class="oe_inline" placeholder="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" />
                            <field name="agreement_contract_id" />
                            <field name="supplier_id" />
                            <field name="payment_term_id" />
                        </group>
                        <group>
                            <!-- <field name="total_rebate_sales" />
                            <field name="total" /> -->
                        </group>
                    </group>
                    <notebook>
                        <page string="Rebate Sales">
                            <field name="outright_settlement_sales_ids"
                                options="{'no_create': False}">
                                <tree>
                                    <field name="rebate_id" />
                                    <field name="store_id" />
                                    <field name="deduction_id" />
                                    <field name="expenses_type" />
                                    <field name="total_sales" />
                                    <field name="rebate_value" />
                                    <field name="subtotal" />
                                </tree>
                            </field>
                        </page>
                        <page string="Rebate Purchase">
                            <field name="outright_settlement_line_ids"
                                options="{'no_create': False}">
                                <tree>
                                    <field name="rebate_id" />
                                    <field name="store_id" />
                                    <field name="deduction_id" />
                                    <field name="expenses_type" />
                                    <field name="total_po" />
                                    <field name="rebate_value" />
                                    <field name="subtotal" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_outright_tree" model="ir.ui.view">
        <field name="name">view.outright.tree</field>
        <field name="model">contract.outright.settlement</field>
        <field name="arch" type="xml">
            <tree string="Rebate Details" create="false" delete="false" edit="false">
                <field name="date" />
                <field name="agreement_contract_id" />
                <field name="supplier_id" />
                <field name="payment_term_id" />
            </tree>
        </field>
    </record>

    <!-- Search view for "model" -->
    <record id="view_outright_search" model="ir.ui.view">
        <field name="name">view.outright.search</field>
        <field name="model">contract.outright.settlement</field>
        <field name="arch" type="xml">
            <search string="Rebate Details">
                <field name="name" />
            </search>
        </field>
    </record>

    <!-- Main window action for "model" -->
    <record id="action_outright_settlement" model="ir.actions.act_window">
        <field name="name">Rebate Details</field>
        <field name="res_model">contract.outright.settlement</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_outright_search" />
    </record>


</odoo>