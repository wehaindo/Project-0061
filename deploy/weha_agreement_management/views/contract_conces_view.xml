<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id="view_contract.conces_form" model="ir.ui.view">
        <field name="name">Contract Conces Form</field>
        <field name="model">contract.conces</field>
        <field name="arch" type="xml"> 
            <form string="Concesioner" create="true" delete="true" edit="true">
                <sheet>
                    <div class="oe_title">
                        <label for="code" class="oe_edit_only" />
                        <h1><field name="code" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="supplier_id" />
                            <field name="contract_id" />
                        </group>
                        <group>
                            <field name="fixed_percent" />
                        </group>
                    </group>
                    <field name="conces_line_ids">
                        <tree string="Conces Lines" create="true" delete="true" edit="true" editable="bottom">
                            <field name="amount_from" />
                            <field name="amount_to" />
                            <field name="percent" />
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_contract.conces_tree" model="ir.ui.view">
        <field name="name">Contract Conces Tree</field>
        <field name="model">contract.conces</field>
        <field name="arch" type="xml"> 
            <tree string="Concesioner" create="true" delete="true" edit="true" editable="bottom">
                <field name="code" />
                <field name="supplier_id" />
                <field name="contract_id" />
            </tree>
        </field>
    </record>
    
    <record id="contract_conces_action" model="ir.actions.act_window">
        <field name="name">Contract Conces</field>
        <field name="res_model">contract.conces</field>
        <field name="view_mode">tree,form</field>
    </record>
    
</odoo>