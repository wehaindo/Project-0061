<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--        form view       -->
        <record id="view_business_unit_form" model="ir.ui.view">
            <field name="name">business.unit.form</field>
            <field name="model">business.unit</field>
            <field name="arch" type="xml">
                <form string="Retail division">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code" />
                            </group>
                            <group>
                                <field name="description" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="company_id" />
                            </group>
                        
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--        tree view       -->
        <record id="view_business_unit_tree" model="ir.ui.view">
            <field name="name">business.unit.tree</field>
            <field name="model">business.unit</field>
            <field name="arch" type="xml">
                <tree string="Retail division" sample="1">
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>

        <record id="action_res_business_unit_form" model="ir.actions.act_window">
            <field name="name">Business Unit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">business.unit</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new business unit
                </p>
                <p>
                    Create and manage business unit for the companies that will be managed by Odoo
                    from here.
                </p>
            </field>
        </record>
        <!--        Menu item       -->
        <menuitem action="action_res_business_unit_form" id="menu_action_res_business_unit_form"
            parent="base.menu_users" sequence="10" />
    </data>
</odoo>