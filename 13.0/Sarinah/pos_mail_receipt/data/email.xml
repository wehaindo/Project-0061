<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        <!--Email template -->
        <record id="email_send_ticket" model="mail.template">
            <field name="name">Send Receipt</field>
            <field name="email_from">${(object.user_id.email and '%s &lt;%s&gt;' % (object.user_id.name, object.user_id.email) or '')|safe}</field>
            <field name="subject">${object.pos_reference}</field>
            <field name="model_id" ref="point_of_sale.model_pos_order" />
            <field name="auto_delete" eval="True" />
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html">
                <![CDATA[
                    <p>Hello ${object.partner_id.name or 'Customer'},</p>
                    <p>Thank you for your purchase. Here is your receipt:</p>
                    <p><strong>Order:</strong> ${object.name}</p>
                    <p><strong>Total:</strong> ${object.amount_total} ${object.pricelist_id.currency_id.name}</p>
                    <br/>
                    <p>Best regards,</p>
                    <p>${user.company_id.name}</p>
                ]]>
            </field>
        </record>

    </data>
</odoo>
