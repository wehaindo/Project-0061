<odoo>
    <data>
        <record id="pos_payment_method_view_tree" model="ir.ui.view">
            <field name="name">pos_payment_method_view_tree</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="is_note"/>
                </xpath>
            </field>
        </record>

        <record id="pos_payment_method_view_form" model="ir.ui.view">
            <field name="name">pos_payment_method_view_form</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="is_note"/>
                </xpath>
            </field>
        </record>

        <record id="view_pos_pos_form" model="ir.ui.view">
            <field name="name">view_pos_pos_form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_ids']/tree/field[@name='payment_method_id']" position="after">
                    <field name="memo" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_pos_payment_tree" model="ir.ui.view">
            <field name="name">view_pos_payment_tree</field>
            <field name="model">pos.payment</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pos_order_id']" position="after">
                    <field name="memo" readonly="1"/>
                </xpath>
            </field>
        </record>

         <record id="view_pos_payment_form" model="ir.ui.view">
            <field name="name">view_pos_payment_form</field>
            <field name="model">pos.payment</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pos_order_id']" position="after">
                    <field name="memo" readonly="1"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo> 