        <t t-jquery="t[t-if='taxincluded']" t-operation="replace">
            <div class="pos-receipt-payment">
                Tax
                <span t-esc='widget.format_currency(receipt.total_tax)' class="pos-receipt-right-align"/>
            </div>
        </t>


        <t t-jquery="t[t-if='receipt.total_discount']" t-operation="replace">
            <div class="pos-receipt-payment">
                Discounts
                    <span t-esc='widget.format_currency(receipt.total_discount)' class="pos-receipt-right-align"/>
            </div>
        </t>


        <t t-jquery=".receipt-change" t-operation="replace">
             <t t-if="receipt.change > 0">
                 <div class="pos-receipt-payment">
                CHANGE
                <span t-esc='widget.format_currency(receipt.change)' class="pos-receipt-right-align"/>
             </div>
             </t>
        </t>
        <t t-jquery=".before-footer" t-operation="append">
             <div class="pos-receipt-border-dash"></div>
        </t>
        <t t-jquery=".pos-receipt-amount" t-operation="after">
                <div class="pos-receipt-border-dash"></div>
        </t>
        <t t-jquery=".pos-receipt-amount" t-operation="replace">
            <div class="pos-receipt-amount_mod">


<!--                <table class="pos-receipt-amount-table">-->
                <table style="width: 100%;">
                    <tr style="width: 100%;">
<!--                        <td class="pos-receipt-amount-enter"></td>-->
                        <td style="width:40%"></td>
                        <td style="width: 35%;white-space: nowrap;text-align: left;padding-right: 5px;font-size: 19px;">TOTAL</td>
                        <td style="width: 25%;text-align: right;font-size: 19px;"><t t-esc='widget.format_currency_no_symbol(receipt.total_with_tax)' /></td>
                    </tr>
                    <tr style="width: 100%;">
                        <t t-set="total_qty" t-value="0"/>
                        <t t-foreach='receipt.orderlines' t-as='line'>
                                <t t-set="total_qty" t-value="total_qty + line.quantity"/>
                            </t>
                        <td style="width:40%"></td>
                        <td style="width: 35%;white-space: nowrap;text-align: left;padding-right: 5px;font-size: 19px;">TOTAL QTY</td>
                        <td style="width: 25%;text-align: right;font-size: 19px;"><span t-esc='total_qty'/></td>
                    </tr>

                    <t t-if="receipt.total_rounded != receipt.total_with_tax">
                        <tr>
                            <td style="width:40%"></td>
                            <td style="width: 35%;white-space: nowrap;text-align: left;padding-right: 5px;font-size: 16px;">Rounding</td>
                            <td style="width: 25%;text-align: right;font-size: 16px;"><span t-esc='widget.format_currency(receipt.rounding_applied)'/></td>
                        </tr>
                        <tr>
                            <td style="width:40%"></td>
                            <td style="width: 35%;white-space: nowrap;text-align: left;padding-right: 5px;font-size: 16px;">To Pay</td>
                            <td style="width: 25%;text-align: right;font-size: 16px;"><span t-esc='widget.format_currency(receipt.total_rounded)'/></td>
                        </tr>
                    </t>
                </table>
            </div>
        </t>


        <t t-jquery="t[t-if='!receipt.header_html and receipt.header']" t-operation="replace">
            <t t-if='!receipt.header_html and receipt.header'>
                    <div>
                        <t t-if="order.is_reprint">
                            <t t-esc='order.receipt_header'/>
                        </t>
                        <t t-else="">
                            <t t-esc='receipt.header'/>
                        </t>
                    </div>
                </t>
        </t>

        <t t-jquery="t[t-foreach='paymentlines']:first" t-operation="replace">
            <!-- LLH Reprint -->
            <t t-if="paymentlines">
                <t t-foreach='paymentlines' t-as='line'>
                    <div class="pos-receipt-payment">
                        <t t-if="line.transaction_id == ''">
                            <t t-if="line.memo">
                                <t t-esc='line.name + ": " + line.memo'/>
                            </t>
                            <t t-else="">
                                <t t-esc='line.name'/>
                            </t>
                        </t>
                        <t t-else="">
                            <t t-if='line.card_type == "EMONEY"'>
                                E-Money
                            </t>
                            <t t-elif='line.card_type == "OVO_PUSH_TO_PAY"'>
                                OVO
                            </t>
                            <t t-elif='line.card_type == "SHOPEEPAY_QR"'>
                                Shopee Pay QRIS
                            </t>
                            <t t-elif='line.card_type == "TCASH_QR"'>
                                LinkAja
                            </t>
                            <t t-elif='line.card_type == "GOPAY_QR"'>
                                Gopay
                            </t>
                            <t t-elif='line.card_type == "CIMB_QR"'>
                                CIMB QRIS
                            </t>
                            <t t-elif='line.card_type == "NOBU_QR_DYNAMIC"'>
                                Nobu QRIS
                            </t>
                            <t t-elif='line.card_type == "ARTAJASA_VA"'>
                                Artajasa
                            </t>
                            <t t-elif='line.card_type == "PERMATA_VA"'>
                                Permata
                            </t>
                            <t t-elif='line.card_type == "BCA_VA"'>
                                BCA
                            </t>
                            <t t-elif='line.card_type == "CASH"'>
                                Cash
                            </t>
                            <t t-elif='line.card_type == "DEBIT"'>
                                Debit
                            </t>
                            <t t-elif='line.card_type == "CREDIT"'>
                                Credit
                            </t>
                            <t t-elif='line.card_type == "ATOME"'>
                                Atome
                            </t>
                            <t t-elif='line.card_type == "VOSPAY"'>
                                Vospay
                            </t>
                            <t t-elif='line.card_type == "INDODANA"'>
                                Indodana
                            </t>
                            <t t-else="">
                                <t t-esc='line.card_type'/>
                            </t>
                        </t>
                        <span t-esc='widget.format_currency(line.get_amount())' class="pos-receipt-right-align"/>
                    </div>
                </t>
            </t>
