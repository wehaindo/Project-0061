<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="OrderReceipt">
        <!--        <t t-jquery=".pos-receipt-contact" t-operation="before">-->
        <!--          <t t-if="widget.pos.config.sh_pos_order_number">-->
        <!--              <center>Order No.  <t t-esc="order.pos_order_number" /></center>-->
        <!--          </t>-->
        <!--        </t>-->

        <t t-jquery=".pos-receipt">
            this.removeAttr('class');
            <!-- this.find('.pos-receipt-contact').next('br').remove();
            this.find('.pos-receipt-contact').next('br').remove(); -->
            this.find('.pos-receipt-contact').nextAll('br').slice(0, 2).remove();
<!--            this.attr('t-attf-class', 'pos-receipt #{widget.pos.config ? \'pos-receipt-modif\' : \'\'}');-->
            this.attr('t-attf-class', 'pos-receipt #{widget.pos.config.is_mobile_pos ? \'pos-receipt-mobile\' : \'\'}');
        </t>

        <t t-jquery=".pos-receipt-contact" t-operation="append">
            <div>
                <t t-if="widget.pos.get_order().invoice_number and widget.pos.config.sh_pos_receipt_invoice">
                    <br/>
                    INV number:
                    <t t-esc="order.invoice_number"/>
                </t>
            </div>

            <div class="sh_customer_detail">
                <t t-if="widget.pos.config.sh_pos_receipt_customer_detail">
                    <t t-if="receipt.client">
                        <br/>
                        <t t-if="widget.pos.config.sh_pos_receipt_customer_name">
                            <div class="sh_customer_name">Customer : <t t-esc="receipt.client"/></div>
                        </t>
                        <t t-if="widget.pos.config.sh_pos_receipt_customer_address">
                            <t t-if="widget.pos.get_order() and widget.pos.get_order().get_client() and widget.pos.db.partner_by_id[widget.pos.get_order().get_client().id].address">
                                <div class="sh_customer_address">Address : <t
                                        t-esc="widget.pos.db.partner_by_id[widget.pos.get_order().get_client().id].address"/></div>
                            </t>
                        </t>
                        <t t-if="widget.pos.config.sh_pos_receipt_customer_mobile">
                            <t t-if="widget.pos.get_order() and widget.pos.get_order().get_client() and widget.pos.db.partner_by_id[widget.pos.get_order().get_client().id].mobile">
                                <div class="sh_customer_mobile">Mobile : <t
                                        t-esc="widget.pos.db.partner_by_id[widget.pos.get_order().get_client().id].mobile"/></div>
                            </t>
                        </t>
                        <t t-if="widget.pos.config.sh_pos_receipt_customer_phone">
                            <t t-if="widget.pos.get_order() and widget.pos.get_order().get_client() and widget.pos.db.partner_by_id[widget.pos.get_order().get_client().id].phone">
                                <div class="sh_customer_mobile">Phone : <t
                                        t-esc="widget.pos.db.partner_by_id[widget.pos.get_order().get_client().id].phone"/></div>
                            </t>
                        </t>
                        <t t-if="widget.pos.config.sh_pos_customer_vat">
                            <t t-if="widget.pos.get_order() and widget.pos.get_order().get_client() and widget.pos.db.partner_by_id[widget.pos.get_order().get_client().id].vat">
                               <t t-if="widget.pos.config.sh_pos_customer_vat_custom_name">
                                   <t t-esc="widget.pos.config.sh_pos_customer_vat_custom_name"/>
                                   :
                               </t>
                                <t t-else="">
                                    Vat :
                                </t>
                                <t t-esc="widget.pos.db.partner_by_id[widget.pos.get_order().get_client().id].vat"/>

                            </t>
                        </t>
                        <t t-if="widget.pos.config.sh_pos_receipt_customer_email">
                            <t t-if="widget.pos.get_order() and widget.pos.get_order().get_client() and widget.pos.db.partner_by_id[widget.pos.get_order().get_client().id].email">
                                <div class="sh_customer_mobile">Email : <t
                                        t-esc="widget.pos.db.partner_by_id[widget.pos.get_order().get_client().id].email"/></div>
                            </t>
                        </t>
                        <div class="pos-receipt-border-dash"></div>
                    </t>
                </t>
            </div>

        </t>
        <t t-jquery=".pos-receipt-order-data" t-operation="replace">
            <div class="sh_receipt_footer">

                <!-- LLH Reprint-->
                <t t-if="order.is_reprint">
                    <t t-esc="order.date_order"/>
                </t>
                <t t-else="">
                    <t t-esc="date_server"/>
                </t>
                <!-- LLH Reprint-->
                <br/>
                <t t-if="order.is_barcode_exit and widget.pos.config.sh_pos_receipt_bacode_qr and widget.pos.config.sh_pos_receipt_barcode_qr_selection == 'barcode'">
                    <img t-att-src="'/report/barcode/Code128/'+receipt.barcode+'?width=200&amp;height=50'"
                         class="barcode_class"/>
                </t>
                <t t-if="order.is_qr_exit and widget.pos.config.sh_pos_receipt_bacode_qr and widget.pos.config.sh_pos_receipt_barcode_qr_selection == 'qr'">
                    <img t-att-src="'/report/barcode/QR/'+receipt.name+'?width=130&amp;height=130'" class="qr_class"/>
                </t>
                <!--                <t t-if="!widget.pos.config.sh_pos_receipt_bacode_qr or (widget.pos.config.sh_pos_receipt_barcode_qr_selection == 'qr' and widget.pos.config.sh_pos_receipt_barcode_qr_selection == 'barcode')">-->
                <!--                    <t t-esc="receipt.name" />-->
                <!--                </t>-->
            </div>

            <div class="sh_receipt_footer" style="font-size: 12px !important;"><t t-esc="receipt.name" /></div>

            <t t-if="order.is_reprint">
                <br/>
                <div class="sh_receipt_footer">Reprint On: <t t-esc="date_server"/></div>
                <div class="sh_receipt_footer">Reprint By: <t t-esc="pos.get_cashier().name"/></div>
            </t>

            <t t-if="pos_product_discount_apply">
                <div class="pos-receipt-border-dash"></div>
                <div class="pos-product-discount-apply">
                    <br/>
                    <span>Coupon</span>
                    <br/>

                    <!-- Mengecek tipe scan QR -->
                    <t t-if="pos_product_discount_apply.type_scan == 'QR'">
                        <img t-att-src="'/report/barcode/QR/'+pos_product_discount_apply.sku+'?width=130&amp;height=130'"
                             class="qr_class"/>
                    </t>

                    <!-- Jika bukan QR, tampilkan barcode Code128 -->
                    <t t-else="">
                        <img t-att-src="'/report/barcode/Code128/'+pos_product_discount_apply.sku+'?width=300&amp;height=75'"
                             class="barcode_class" />
                    </t>

                    <div class="pos-product-discount-name">
                        <t t-esc="pos_product_discount_apply.name"/>
                    </div>
                    <br/>

                    <div class="pos-product-discount-terms">
                        <span>T &amp; C :</span>
                        <br/>
                        <t t-raw="pos_product_discount_apply.terms_text"/>
                    </div>
                </div>
            </t>


                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
        </t>

       <t t-jquery=".orderlines" t-operation="replace">
        <div class="orderlines">
            <div class="pos-receipt-border-dash"></div>
            <table style="width: 100%; table-layout: fixed;">
                <thead>
                    <tr style="width: 100%;">
                        <th style="width: 45%; padding-left: 3px; font-size: 16px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold; word-wrap: break-word;"/>
                        <th style="padding-left: 3px; width: 15%; font-size: 14px; text-align: right; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;"/>
                        <th style="padding-left: 3px; text-align: left; width: 5%; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;"/>
                        <th style="padding-left: 3px; width: 25%; text-align: right; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;"/>
                        <th style="min-width: 20px; width: 10%; text-align: right; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;"/>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="line_number" t-value="1"/>
                    <t t-foreach="receipt.orderlines" t-as="line">
                        <tr style="width: 100%;">
                            <th style="font-size: 19px; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;" colspan="5">
                                <t t-esc="line.name"/>
                            </th>
                        </tr>
                        <tr style="width: 100%;">
                            <td style="width: 45%; padding-left: 3px; font-size: 16px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold; word-wrap: break-word;">
                                <t t-esc="line.default_code"/>
                            </td>
                            <td style="padding-left: 3px; width: 15%; font-size: 14px; text-align: right; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;">
                                <t t-esc="Math.round(line.quantity * Math.pow(10, pos.dp['Product Unit of Measure'])) / Math.pow(10, pos.dp['Product Unit of Measure'])"/>
                                <t t-if="line.unit_name !== 'Units'" t-esc="line.unit_name"/>
                            </td>
                            
                            <td style="padding-left: 3px; text-align: left; width: 5%; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;"> X </td>
                            <td style="padding-left: 3px; width: 25%; text-align: right; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;">
                                <t t-esc="widget.format_currency_no_symbol(line.base_price_product)"/>
                            </td>
                            <td style="min-width: 20px; width: 10%; text-align: right; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;"/>
                        </tr>
                        <t t-if="line.total_discount_price > 0">
                            <tr style="width: 100%;">
                                <t t-if="line.discount !== 0">
                                    <td style="width: 45%; padding-left: 3px; font-size: 16px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;">Discount</td>
                                    <td style="padding-left: 3px; width: 15%; font-size: 14px; text-align: right; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;">
                                        <t t-esc="line.discount"/>%
                                    </td>
                                    <td style="padding-left: 3px; text-align: left; width: 5%; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;"/>
                                    <td style="padding-left: 3px; width: 25%; text-align: right; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;">
                                        <t t-if="line.total_discount_price > 0">
                                            <t t-esc="widget.format_currency_no_symbol(line.total_discount_price * -1)"/>
                                        </t>
                                    </td>
                                    <td style="min-width: 20px; width: 10%; text-align: right; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;"/>
                                </t>
                                <t t-elif="line.display_discount_policy == 'without_discount' &amp;&amp; line.price != line.base_price_product">
                                    <td style="width: 45%; padding-left: 3px; font-size: 16px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;">Discount</td>
                                    <td style="padding-left: 3px; width: 15%; font-size: 14px; text-align: right; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;">
                                        <t t-esc="widget.format_currency_no_symbol(line.base_price_product - line.price)"/>
                                    </td>
                                    <td style="padding-left: 3px; text-align: left; width: 5%; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;"/>
                                    <td style="padding-left: 3px; width: 25%; text-align: right; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;">
                                        <t t-if="line.total_discount_price > 0">
                                            <t t-esc="widget.format_currency_no_symbol(line.total_discount_price * -1)"/>
                                        </t>
                                    </td>
                                    <td style="min-width: 20px; width: 10%; text-align: right; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;"/>
                                </t>
                                <t t-else="">
                                    <td style="width: 45%; padding-left: 3px; font-size: 16px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;">
                                        <t t-if="line.total_discount_price > 0">
                                            Discount
                                        </t>
                                    </td>
                                    <td style="padding-left: 3px; width: 15%; font-size: 14px; text-align: right; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;">
                                        <t t-if="line.total_discount_price > 0">
                                            <t t-esc="widget.format_currency_no_symbol(line.total_discount_price)"/>
                                        </t>
                                    </td>
                                    <td style="padding-left: 3px; text-align: left; width: 5%; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;"/>
                                    <td style="padding-left: 3px; width: 25%; text-align: right; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;">
                                        <t t-if="line.total_discount_price > 0">
                                            <t t-esc="widget.format_currency_no_symbol(line.total_discount_price * -1)"/>
                                        </t>
                                    </td>
                                    <td style="min-width: 20px; width: 10%; text-align: right; font-size: 14px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;"/>
                                </t>
                            </tr>
                        </t>
                        <t t-if="line.promotion_code">
                            <tr style="font-size: 14px; font-style: italic;">
                                <td colspan="5"><t t-esc="line.promotion_code"/></td>
                            </tr>
                        </t>
                        <tr style="width: 100%;">
                            <td style="width: 100%; text-align: right; font-size: 19px; white-space: nowrap; font-family: 'Lato', 'Lucida Grande', Helvetica, Verdana, Arial; font-weight: bold;" colspan="5">
                                <t t-esc="widget.format_currency_no_symbol(line.price_display)"/>
                            </td>
                        </tr>
                        <tr class="order-line-enter">
                            <td colspan="5"></td>
                        </tr>
                    </t>
                </tbody>
            </table>
            <div class="pos-receipt-border-dash"></div>
        </div>
    </t>



        <t t-jquery="div.pos-receipt-right-align" t-operation="replace">

            <!--            <div class="pos-receipt-right-align">&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;</div>-->
