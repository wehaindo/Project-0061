<odoo>
    <record id="action_compute_all_days" model="ir.actions.server">
        <field name="name">Compute All Days</field>
        <field name="model_id" ref="model_srn_pos_product_discount"/>
        <field name="binding_model_id" ref="model_srn_pos_product_discount"/>
        <field name="state">code</field>
        <field name="code">
records.compute_all_day_of_week_ids()
        </field>
    </record>
    <record id="action_reset_voucher" model="ir.actions.server">
        <field name="name">Reset Voucher</field>
        <field name="model_id" ref="model_gift_voucher"/>
        <field name="binding_model_id" ref="model_gift_voucher"/>
        <field name="state">code</field>
        <field name="code">
records.reset_voucher_used()
        </field>
    </record>

</odoo>
