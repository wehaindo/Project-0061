<odoo>
    <record id="pos_product_discount_view_form_inherit" model="ir.ui.view">
        <field name="name">pos product discount form with notebook</field>
        <field name="model">srn.pos.product.discount</field>
        <field name="inherit_id" ref="srn_pos_discount_with_product.pos_product_discount_view_form"/>
        <field name="arch" type="xml">
        <!-- add button in header -->
<!--            <xpath expr="//group" position="before">-->
<!--                <header>-->
<!--                    <button name="action_create_inventory_adjusment" string="Create Inventory Adjustment" type="object" class="btn-primary"/>-->
<!--                </header>-->
<!--            </xpath>-->
            <xpath expr="//sheet/group" position="after">
                <notebook>
                    <page string="Product Discount">
                        <field name="product_discount_line_ids" widget="one2many_list">
                            <tree string="Product Discount" editable="bottom">
                                <field name="product_id" invisible="1"/>
                                <field name="quantity"/>
                                <field name="location_id" required="1"/>
                                <field name="branch_id" required="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
