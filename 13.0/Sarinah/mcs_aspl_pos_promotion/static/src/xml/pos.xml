<?xml version="1.0" encoding="UTF-8"?>


<templates id="template" xml:space="preserve">

    <t t-name="PosDiscountBxgyfButton">
        <div class='control-button'>
            Buy x Get y Free
        </div>
    </t>

    <t t-name="FreeProductPopup">
        <div class="modal-dialog" id="inbuilt_free_product">
            <div class="popup popup-textinput" style="height:400px !important;width:600px !important">
                <div class="title" style="height:3% !important;margin-bottom:0px;">
                    <div>
                        <p style="position: absolute;height: 27px;width: 600px;margin-top: -8px;">
                            <t t-esc=" widget.options.title || 'Free Product' "/>
                        </p>
                    </div>
                </div>
                <div style="height:70%;overflow-y: auto;">
                    <div class="_popup_body">
                        <div class='subwindow-container-fix touch-scrollable scrollable-y'>
                            <table class='selection scrollable-y touch-scrollable free_product-list'>
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>QTY</th>
                                    </tr>
                                </thead>
                                <tbody class='free_product-list-contents'>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div id="free_product_error" style="background:#ffa566;height:22px;display:none">
                       <span style="color:brown"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>Please select a
                           discount</span>
                </div>
                <div class="footer">
                    <div class="button apply">
                        <u>S</u>elect Item
                    </div>
                    <div class="button cancel">
                        Ca<u>n</u>cel
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="ProductFreeLine">
        <tr class='product_free' t-att-id='free_product.id'>
            <t t-if="free_product and free_product.display_name">
                <td class="text-left"><t t-esc='free_product.display_name' /></td>
            </t>
            <t t-if="free_product and free_product.qty">
                <td><t t-esc='free_product.qty' /></td>
            </t>

        </tr>
    </t>

