<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="weha_customer_deposit.ControlButtons" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
        <xpath expr="//t[@t-if='props.showRemainingButtons']/div/OrderlineNoteButton" position="after">
            <button t-att-class="buttonClass" t-on-click="clickOpenTopup">
                <span class="px-2 py-1 rounded-circle text-bg-dark fw-bolder small me-1"/>
                <span>Topup</span>
            </button>
            <button t-att-class="buttonClass" t-on-click="clickOpenRefund">
                <span class="px-2 py-1 rounded-circle text-bg-dark fw-bolder small me-1"/>
                <span>Refund</span>
            </button>
        </xpath>        
    </t>
</templates>