<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ActionpadWidget" t-inherit="point_of_sale.ActionpadWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('pay')]" position="after">
            <t t-if='env.pos.config.allow_open_cash_d'>
                <style>
                    .pos .actionpad .button.pay {
                        height: 108px;
                    }
                </style>
                <button class='button js-open-cashdrawer' t-on-click="() => this.trigger('click-open-cashbox')">
                    <i class='fa fa-archive' /> Open Cashbox
                </button>
            </t>
        </xpath>
    </t>
    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('payment-controls')]" position="inside">
            <div  t-if='env.pos.config.allow_open_cash_d' class="button" t-on-click="new_js_cashdrawer">
                 <i class='fa fa-archive' /> Open Cashbox
            </div>
        </xpath>
    </t>
</templates>