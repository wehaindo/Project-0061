<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree view for Voucher Location -->
        <record id="view_weha_smart_pos_config_tree" model="ir.ui.view">
            <field name="name">view.weha.smart.pos.config.tree</field>
            <field name="model">smart.pos.config</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="code"/>
                </tree>
            </field>
        </record>
        
        <!-- Form view for Voucher Stage -->
        <record id="view_weha_smart_pos_config_form" model="ir.ui.view">
            <field name="name">view.weha.smart.pos.config.form</field>
            <field name="model">smart.pos.config</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_inline"
                                    placeholder="name" />
                            </h1>
                        </div>
                        <group string="General Information">
                            <group>
                                <field name="code"/>
                                <field name="couch_id"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="stock_picking_type_id"/>
                                <field name="smart_pos_payment_method_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <group string="Config Information">
                            <group>
                                <field name="is_offline_support" />
                                <field name="show_product" />
                                <field name="show_new_order" />
                                <field name="show_hold_order" />
                                <field name="show_note_order_line" />
                            </group>
                            <group>
                                
                            </group>
                        </group>
                        <group string="Restaurant Information">
                            <group>
                                <field name="is_restaurant"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view for "model" -->
        <record id="view_weha_smart_pos_config_search" model="ir.ui.view">
            <field name="name">view.weha.smart.pos.config.search</field>
            <field name="model">smart.pos.config</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="model_search">
                    <field name="name" />
                    <field name="code" />
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_weha_smart_pos_config_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Smart POS Config</field>
            <field name="res_model">smart.pos.config</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_weha_smart_pos_config_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new Smart Pos Config
                </p>
            </field>
        </record>
        
        <menuitem id="weha_smart_pos_config_menu" 
            name="POS Config" 
            parent="weha_smart_pos_configuration_menu"
            action="action_weha_smart_pos_config_act_window" 
            groups="group_weha_smart_pos_supervisor"
            sequence="1"/>

    <record id="action_smart_pos_config_kanban" model="ir.actions.act_window">
        <field name="name">Smart POS</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">smart.pos.config</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain"></field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Smart POS Config
            </p><p>
                Configure at least one Point of Sale.
            </p>
        </field>
    </record>

    <menuitem id="menu_smart_pos_config_dashboard" 
        action="action_smart_pos_config_kanban" 
        parent="weha_smart_pos_mgmt_main_menu" 
        name="Dashboard" 
        sequence="1"/>


    </data>
</odoo>