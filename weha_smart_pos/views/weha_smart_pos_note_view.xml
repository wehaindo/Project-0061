<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_weha_smart_pos_note_tree" model="ir.ui.view">
        <field name="name">weha.smart.pos.note.tree</field>
        <field name="model">smart.pos.note</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_weha_smart_pos_note_form" model="ir.ui.view">
        <field name="name">weha.smart.pos.note.form</field>
        <field name="model">smart.pos.note</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="smart_pos_note_action" model="ir.actions.act_window">
        <field name="name">smart.pos.note.action</field>
        <field name="res_model">smart.pos.note</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="weha_smart_pos_note_menu" 
        name="POS Note" 
        parent="weha_smart_pos_configuration_menu"
        action="smart_pos_note_action" 
        groups="group_weha_smart_pos_supervisor"
        sequence="3"/>

</odoo>
