<?xml version="1.0" encoding="UTF-8"?> 
<templates id="template" xml:space="preserve">        
    <t t-name="weha_smart_pos_base.OrderWidget" t-inherit="point_of_sale.OrderWidget" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('order-summary')]" position="inside">      
            <div t-if="this.props.isShowTotalItems || this.props.isShowTotalQuantity" class="fs-6 text-muted subentry" style="display:flex;flex-direction: row-reverse;">
                <div t-if="this.props.isShowTotalItems">
                    Total Items:<span t-esc="this.props.totalItems" class="tax"/>
                </div>
                <div t-if="this.props.isShowTotalQuantity">
                    Total Quantity:<span t-esc="this.props.totalQuantity" class="tax"/>
                </div>                
            </div>                  
        </xpath>
    </t>
</templates> 