<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="weha_smart_pos_base.PaymentMethodPopup">
        <div class="popup popup-error">
            <div class="modal-header">
                <h4 class="modal-title title">
                    <t t-esc="props.title" />
                </h4>
            </div>
            <main class="modal-body">
                <t t-foreach="props.paymentMethods" t-as="paymentMethod" t-key="paymentMethod.id">
                    <div class="button paymentmethod btn btn-light rounded-0 border-bottom" t-on-click="() => this.parent.addNewPaymentLine(paymentMethod)">
                        <div class="payment-method-display d-flex align-items-center flex-grow-1">
                            <div>
                                <!-- <img class="payment-method-icon" t-att-src="parent.paymentMethodImage(paymentMethod.id)" /> -->
                            </div>
                            <span class="payment-name" t-esc="paymentMethod.name" />
                        </div>
                    </div>
                </t>
            </main>
            <div class="footer modal-footer">
                <div class="button cancel btn btn-lg btn-primary" t-on-click="cancel">
                    <t t-esc="props.cancelText" />
                </div>
            </div>
        </div>
    </t>
</templates>
