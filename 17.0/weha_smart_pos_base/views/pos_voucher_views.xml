<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_pos_voucher_order_form" model="ir.ui.view">
            <field name="name">pos.voucher.order.form</field>
            <field name="model">pos.voucher.order</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Generate Voucher" name="action_generate_voucher" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <span class="o_form_label">Order #</span>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_order" />
                                <field name="voucher_type" />
                                <field name="voucher_sequence"/>
                            </group>
                            <group>
                                <field name="description"/>
                                <field name="voucher_prefix"/>
                                <field name="expiry_date"/>
                                <field name="voucher_amount"/>
                                <field name="voucher_count"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="page_vouchers" string="Vouchers">
                                <field name="pos_voucher_ids">
                                    <tree>
                                        <field name="voucher_seq" />
                                        <field name="voucher_code" />
                                        <field name="voucher_amount" />
                                        <field name="state" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pos_voucher_order_tree" model="ir.ui.view">
            <field name="name">pos.voucher.order.tree</field>
            <field name="model">pos.voucher.order</field>
            <field name="arch" type="xml">
                <tree string="Voucher Order">
                    <field name="name"/>
                    <field name="date_order"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_pos_voucher_form" model="ir.ui.view">
            <field name="name">pos.voucher.form</field>
            <field name="model">pos.voucher</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Set Open" name="action_set_open" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <!-- <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_view_redeem_voucher" class="oe_stat_button"
                                    icon="fa-pencil-square-o">
                                <field name="redeem_voucher_count" widget="statinfo" string="History"/>
                            </button>
                        </div> -->
                        <div class="oe_title">
                            <span class="o_form_label">Voucher Sequence</span>
                            <h1>
                                <field name="voucher_seq"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="is_active" widget="boolean_toggle"/>
                                <field name="name" class="oe_inline"/>
                                <field name="voucher_amount"/>
                                <field name="minimum_purchase" string="Minimum Amount" required="1"/>
                            </group>
                            <group>
                                <field name="expiry_date"/>
                                <field name="redemption_order"/>
                                <field name="redemption_customer"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pos_voucher_order_search" model="ir.ui.view">
            <field name="name">pos.voucher.order.search</field>
            <field name="model">pos.voucher.order</field>
            <field name="arch" type="xml">
                <search string="Pos Voucher Order Search">
                    <field name="name"/>
                    <field name="date_order"/>
                    <field name="state"/>
                </search>
            </field>
        </record>

        <record id="action_pos_voucher_order" model="ir.actions.act_window">
            <field name="name">Voucher Order</field>
            <field name="res_model">pos.voucher.order</field>
            <field name="view_mode">tree,form</field>                                   
        </record>


        <record id="view_pos_voucher_tree" model="ir.ui.view">
            <field name="name">pos.voucher.tree</field>
            <field name="model">pos.voucher</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="voucher_code"/>
                    <field name="name"/>
                    <field name="voucher_amount"/>
                    <field name="minimum_purchase"/>
                    <field name="expiry_date"/>
                </tree>
            </field>
        </record>

        <record id="view_pos_voucher_search" model="ir.ui.view">
            <field name="name">view.pos.voucher.search</field>
            <field name="model">pos.voucher</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="voucher_code"/>
                    <field name="name" />
                    <field name="expiry_date"/>
                </search>
            </field>
        </record>

         <record id="action_pos_voucher" model="ir.actions.act_window">
            <field name="name">Voucher</field>
            <field name="res_model">pos.voucher</field>            
            <field name="view_mode">tree,form</field>
        </record>


        <!--  REDEEM VOUCHER -->
        <record id="view_pos_voucher_redeem_tree" model="ir.ui.view">
            <field name="name">pos.voucher.redeem.tree</field>
            <field name="model">pos.voucher.redeem</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="pos_voucher_id"/>
                    <field name="voucher_code"/>
                    <field name="order_name"/>
                    <field name="order_amount"/>
                    <field name="voucher_amount"/>
                    <field name="used_date"/>
                    <field name="user_id"/>
                    <field name="customer_id"/>
                </tree>
            </field>
        </record>

        <record id="view_pos_voucher_redeem_search" model="ir.ui.view">
            <field name="name">pos.voucher.redeem.search</field>
            <field name="model">pos.voucher.redeem</field>
            <field name="arch" type="xml">
                <search string="Voucher Redeem">
                    <field name="customer_id"/>
                    <field name="pos_voucher_id"/>
                    <field name="used_date"/>
                    <field name="user_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="customer_id" context="{'group_by':'customer_id'}"/>
                        <filter string="Voucher" name="pos_voucher_id" context="{'group_by':'pos_voucher_id'}"/>
                        <filter string="Redeem Date" name="used_date" context="{'group_by':'used_date'}"/>
                        <filter string="User" icon="terp-personal" name="user_id" context="{'group_by':'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--  REDEEM VOUCHER ACTION -->
        <record id="action_pos_voucher_redeem" model="ir.actions.act_window">
            <field name="name">Redeem</field>
            <field name="res_model">pos.voucher.redeem</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="pos_voucher_main_menu" name="Vouchers" parent="weha_smart_pos_base.menu_pos_base_features" sequence="4"/>

        <menuitem id="pos_voucher_order_menu" 
            name="Voucher Order" 
            action="action_pos_voucher_order"
            parent="weha_smart_pos_base.pos_voucher_main_menu" 
            sequence="1"/>

        <menuitem id="pos_voucher_menu" 
                  name="Voucher" 
                  action="action_pos_voucher"
                  parent="weha_smart_pos_base.pos_voucher_main_menu" 
                  sequence="2"/>

        <!-- <menuitem id="pos_voucher_redeem_menu" 
                  name="Redeem" 
                  action="action_pos_voucher_redeem"
                  parent="weha_smart_pos_base.pos_voucher_main_menu" 
                  sequence="2"/>         -->

    </data>
</odoo>