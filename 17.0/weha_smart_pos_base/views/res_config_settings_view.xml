<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_view_form_inherit_weha_smart_pos_base" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.weha.smart.pos.base</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="pos_interface_section" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_set_control_button_position"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Set Control Button Position</span>
                        <div class="text-muted">
                            Set Control Button Position on Left Screen
                        </div>  
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_show_product_grid"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Show Product Grid</span>
                        <div class="text-muted">
                            Show or Hide Product Grid
                        </div>  
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_show_bag_charge"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Show Bag Charge</span>   
                        <br/>
                        <field name="bag_pos_category_id" nolabel="1" invisible="not is_show_bag_charge" required="is_show_bag_charge" />  
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_set_default_customer"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Default Customer</span>
                        <br/>
                        <field name="customer_id" nolabel="1" invisible="not is_set_default_customer" required="is_set_default_customer" />   
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="use_store_access_rights"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Use Store Access Rights</span>  
                        <br/>
                        <field name="supervisor_ids" widget="many2many_tags" invisible="not use_store_access_rights"/>
                        <br/>
                        <field name="access_rights_refund" invisible="not use_store_access_rights"/>
                        <span class="o_form_label" invisible="not use_store_access_rights">Refund Order</span>  
                        <br/>
                        <field name="access_rights_clear_order" invisible="not use_store_access_rights"/>
                        <span class="o_form_label" invisible="not use_store_access_rights">Clear Order</span>  
                        <br/>
                        <field name="access_rights_del_orderline" invisible="not use_store_access_rights"/>
                        <span class="o_form_label" invisible="not use_store_access_rights">Delete Orderline</span>  
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_show_total_items"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_show_total_items" string="Show Total Items"/>
                        <div class="text-muted">
                            Allow to show total items.
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_show_total_quantity"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_show_total_quantity" string="Show Total Quantity"/>
                        <div class="text-muted">
                            Allow to show total quantity.
                        </div>
                    </div>
                </div>    
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_show_payment_method_popup"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_show_payment_method_popup" string="Show Payment Method Popup"/>
                        <div class="text-muted">
                            Show Payment Method Popup.
                        </div>
                    </div>
                </div>          
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="enable_deposit"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_deposit" string="Enable Customer Deposit"/>
                        <div class="text-muted">
                            Define Doposit Product
                        </div>
                        <field name="deposit_product"/>
                    </div>
                </div>    
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="enable_voucher"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_voucher" string="Enable Customer Voucher"/>
                        <br/>
                        <field name="voucher_account_id" invisible="enable_voucher == False"/>    
                        <br/>
                        <field name="voucher_payment_method_id" invisible="enable_voucher == False"/>    
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">                        
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Support Channels</span>  
                        <br/>
                        <field name="support_channel_ids" widget="many2many_tags"/>                        
                    </div>
                </div>    
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_save_pos_order_to_localdb"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_save_pos_order_to_localdb" string="Save Order to Local DB"/>
                        <div class="text-muted">
                            Backup Order to Local DB
                        </div>
                    </div>
                </div>            
                
            </block>
        </field>
    </record>
</odoo>