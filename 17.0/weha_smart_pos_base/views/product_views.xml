<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">            
            <div name="options" position="inside">
                <span class="d-inline-block">
                    <field name="has_multi_uom"/>
                    <label for="has_multi_uom"/>
                </span>
            </div>
            <xpath expr="//notebook" position="inside">
                <!-- Multiple Barcode -->
                <page name="multiple_barcode_page" string="Barcodes">                    
                    <field name="product_template_barcode_ids">
                        <tree>
                            <field name="barcode"/>
                        </tree>
                    </field>
                </page>
                <!-- Multiple UOM -->               
                <page name="extra_ingredients" string="Extra Products">
                    <field name="multi_uom_ids">
                        <tree editable="bottom">
                            <field name="uom_name"/>
                            <field name="multi_uom_id" required="True"/>
                            <field name="barcode"/>
                            <field name="sequence"/>
                            <field name="price"/>
                        </tree>
                    </field>
                </page>
            </xpath>           
        </field>
    </record>
</odoo>
