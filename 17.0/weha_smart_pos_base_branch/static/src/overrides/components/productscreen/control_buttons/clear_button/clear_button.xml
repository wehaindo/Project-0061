<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="weha_smart_pos_base.ClearButton">
        <div class="control-button clear-button btn rounded-0 fw-bolder text-truncate" t-attf-class="{{this.partner ? 'btn-primary' : 'btn-light'}}"
         t-on-click="onClick">
            <i class="fa fa-user me-1" role="img" aria-label="Clear Order" title="Clear Order" />
            <t t-esc="this.partner.name" t-if="this.partner" />
            <t t-else="">
                Clear Order
            </t>
        </div>
    </t>
</templates>