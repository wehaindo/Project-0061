<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="shopon_pos_theme_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.shopon_pos_theme</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="pos_interface_section" position="after">
                    <h2 class="mt16">
                        ShopOn POS Theme Configuration
                    </h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane" id="shopon_pos_theme_primary_color_setting">
                                <span class="o_form_label">Theme Color</span>
                                <div class="text-muted">
                                    Customize the look and feel of Theme Colors
                                </div>
                                <div class="w-50 row">
                                    <span class="d-block w-75 py-2">Theme Color</span>
                                    <field name="shopon_pos_theme_primary_color" class="d-block w-25 p-0 m-0"
                                           widget="color"/>
                                </div>
                            </div>
                            <div class="o_setting_right_pane" id="shopon_pos_theme_layout_setting">
                                <span class="o_form_label">Layout</span>
                                <div class="text-muted">
                                    Customize the layout of your product view
                                </div>
                                <div class="w-50 row">
                                    <!--                                    <span class="d-block w-75 py-2">Layout</span>-->
                                    <field name="setu_layout_view" class="d-block w-100"/>
                                </div>
                            </div>

                            <div class="o_setting_left_pane">
                                <field name="is_custom_receipt"/>
                            </div>
                            <div class="o_setting_right_pane">
                                 <span class="o_form_label">Receipt Layout</span>
                                <div class="text-muted">Use Custom Receipt Design</div>
                                <div class="content-group mt16">
                                    <field name="setu_receipt_design"
                                           options='{"no_open": True, "no_create": True}'
                                           attrs="{'invisible': [('is_custom_receipt', '=', False)]}"/>
                                </div>
                            </div>
                        </div>
                        <div id="pos_stocks" class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="setu_display_stock"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="setu_display_stock" string="Display stock in POS"/>
                                <div class="text-muted">
                                    Display product's stock info in POS
                                </div>
                                <div class="content-group" attrs="{'invisible' : [('setu_display_stock', '=', False)]}">
                                    <div class="row mt16">
                                        <label string="Hide out of stock products" for="setu_hide_out_of_stock"
                                               class="col-md-5 o_light_label"/>
                                        <field name="setu_hide_out_of_stock"/>
                                    </div>
                                    <div class="row" style="margin-top: 10px;">
                                        <label string="Stock type" for="setu_stock_type"
                                               class="col-md-5 o_light_label"/>
                                        <field name="setu_stock_type" attrs="{'required': [('setu_display_stock', '=', True)]}"/>
                                    </div>
                                    <div class="row" style="margin-top: 10px;">
                                        <label string="Allow Order When Out-of-Stock" for="setu_continous_sale"
                                               class="col-md-5 o_light_label"/>
                                        <field name="setu_continous_sale"/>
                                    </div>
                                    <div class="row" style="margin-top: 10px;"
                                         attrs="{'invisible' : [('setu_continous_sale', '=', True)]}">
                                        <label string="Custom message" for="setu_error_msg"
                                               class="col-md-5 o_light_label"/>
                                        <field name="setu_error_msg"/>
                                    </div>
                                    <div class="row" style="margin-top: 10px;"
                                         attrs="{'invisible' : [('setu_continous_sale', '=', True)]}">
                                        <label string="Deny order when product stock is equal to" for="setu_deny_val"
                                               class="col-md-5 o_light_label"/>
                                        <field name="setu_deny_val"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container product_variants">
                        <div class="col-xs-6 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="setu_pos_enable_product_variants" />
                            </div>
                            <div class="o_setting_right_pane">
                                <div>
                                    <label for="setu_pos_enable_product_variants" />
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="setu_close_popup_after_single_selection" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="setu_close_popup_after_single_selection" />
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-6 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="setu_pos_display_alternative_products" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="setu_pos_display_alternative_products" />
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="setu_is_hide_financial_details" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="setu_is_hide_financial_details" />
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
