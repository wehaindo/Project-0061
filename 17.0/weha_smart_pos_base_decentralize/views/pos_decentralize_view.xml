<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_decentralize_form" model="ir.ui.view">
        <field name="name">pos.decentralize.form</field>
        <field name="model">pos.decentralize</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="branch_id" />
                            <field name="data_type" />
                            <field name="reference" />                            
                        </group>
                        <group>
                            <field name="data"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pos_decentralize_tree" model="ir.ui.view">
        <field name="name">pos.decentralize.tree</field>
        <field name="model">pos.decentralize</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="branch_id" />
                <field name="data_type" />
                <field name="reference" />  
                <field name="data"/>  
            </tree>
        </field>
    </record>
    
    <record id="view_pos_decentralize_search" model="ir.ui.view">
        <field name="name">pos.decentralize.search</field>
        <field name="model">pos.decentralize</field>
        <field name="arch" type="xml">
            <search string="">                
                <field name="branch_id"/>
                <field name="data_type"/>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_pos_decentralize" model="ir.actions.act_window">
        <field name="name">Pos Decentralize</field>
        <field name="res_model">pos.decentralize</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="view_pos_decentralize_file_form" model="ir.ui.view">
        <field name="name">pos.decentralize.file.form</field>
        <field name="model">pos.decentralize.file</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="date_file" />
                            <field name="branch_id" />
                            <field name="data_type" />
                            <field name="reference" />                            
                        </group>
                        <group>
                            <field name="decentralize_filename" invisible="1"/>
                            <field name="decentralize_file" filename="decentralize_filename" string="Decentralize File"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pos_decentralize_file_tree" model="ir.ui.view">
        <field name="name">pos.decentralize.file.tree</field>
        <field name="model">pos.decentralize.file</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="date_file" />
                <field name="branch_id" />
                <field name="data_type" />
                <field name="reference" /> 
            </tree>
        </field>
    </record>
    
    <record id="view_pos_decentralize_file_search" model="ir.ui.view">
        <field name="name">pos.decentralize.file.search</field>
        <field name="model">pos.decentralize.file</field>
        <field name="arch" type="xml">
            <search string="">                
                <field name="branch_id"/>
                <field name="data_type"/>
                <field name="name"/>
            </search>
        </field>
    </record>


    <record id="action_pos_decentralize_file" model="ir.actions.act_window">
        <field name="name">Pos Decentralize File</field>
        <field name="res_model">pos.decentralize.file</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>


    <menuitem
        id="pos_decentralize_menu"
        name="Decentralize"
        parent="weha_upload_transpos.pos_config_menu_root"
        sequence="9"
    />

    <menuitem
        id="pos_decentralize_data_menu"
        name="Decentralize Data"
        action="action_pos_decentralize"        
        parent="pos_decentralize_menu"
        sequence="1"/>
        
    <menuitem
        id="pos_decentralize_file_menu"
        name="Decentralize File"
        action="action_pos_decentralize_file"        
        parent="pos_decentralize_menu"
        sequence="2"/>

</odoo>
