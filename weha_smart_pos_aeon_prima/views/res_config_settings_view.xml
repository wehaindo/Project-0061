<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_view_form_inherit_weha_smart_pos_aeon_prima" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.weha.smart.pos.aeon_prima</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_interface_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">                                                
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Prima Partner ID</span>
                        <br/>
                        <field name="prima_partner_id"/>
                        <br/>
                        <span class="o_form_label">Prima Merchant ID</span>
                        <br/>
                        <field name="prima_merchant_id"/>
                        <br/>
                        <span class="o_form_label">Prima Terminal ID</span>
                        <br/>
                        <field name="prima_terminal_id"/>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">                      
                        <field name="enable_prima_session_report"/>                          
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Enable Prima Session Report</span>                    
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>