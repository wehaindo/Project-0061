<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ace_view_pos_payment_method_form" model="ir.ui.view">
        <field name="name">pos.payment.method.form.view.inherit</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <field name="is_cash_count" position="before">
                <field name="allow_for_wallet"/>
            </field>
        </field>
    </record>

    <record id="pos_config_view_form_inherit_wallet" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.wallet</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <div id="category_reference" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" id="enable_wallet">
                    <div class="o_setting_left_pane">
                        <field name="enable_wallet"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_wallet" string="Wallet"/>
                        <div class="text-muted">
                            POS Wallet
                        </div>
                    </div>
                    <div class="o_setting_right_pane" attrs="{'invisible' : [('enable_wallet', '=', False)]}">
                        <label for="wallet_payment_method_id" string="Wallet Journal"/>
                        <div class="text-muted">
                            Wallet Payment Method
                        </div>
                        <field name="wallet_payment_method_id"
                               attrs="{'invisible' : [('enable_wallet', '=', False)],'required':[('enable_wallet', '=', True)]}"
                               options="{'no_create':True}"/>
                    </div>
                    <div class="o_setting_right_pane"
                         attrs="{'invisible' : [('enable_wallet', '=', False)],'required':[('enable_wallet','==',True)]}">
                        <label for="wallet_account_id" string="Wallet Account"/>
                        <div class="text-muted">
                            Wallet Account
                        </div>
                        <field name="wallet_account_id" domain="[('user_type_id.internal_group','=','liability')]"
                               attrs="{'invisible': [('enable_wallet', '=', False)], 'required': [('enable_wallet', '=', True)]}"
                               options="{'no_create': True,'no_open':True, 'no_edit': True}"/>
                    </div>
                    <div class="o_setting_right_pane"
                         attrs="{'invisible' : [('enable_wallet', '=', False)],'required':[('enable_wallet','==',True)]}">
                        <label string="Wallet Product" for="wallet_product"/>
                        <div class="text-muted">
                            Wallet Product
                        </div>
                        <field name="wallet_product" domain="[('available_in_pos','=', True)]"
                               options="{'no_create': True,'no_open':True, 'no_edit': True}"/>
                    </div>
                    <div class="o_setting_left_pane"
                         attrs="{'invisible' : [('enable_wallet', '=', False)],'required':[('enable_wallet','==',True)]}">
                        <field name="print_ledger"/>
                    </div>
                    <div class="o_setting_right_pane"
                         attrs="{'invisible' : [('enable_wallet', '=', False)],'required':[('enable_wallet','==',True)]}">
                        <label for="print_ledger" string="Print Wallet Ledger"/>
                        <div class="text-muted">
                            Print Wallet Ledger
                        </div>
                    </div>
                    <div class="o_setting_left_pane"
                         attrs="{'invisible' : [('enable_wallet', '=', False)],'required':[('enable_wallet','==',True)]}">
                        <field name="receipt_balance"/>
                    </div>
                    <div class="o_setting_right_pane"
                         attrs="{'invisible' : [('enable_wallet', '=', False)],'required':[('enable_wallet','==',True)]}">
                        <label for="receipt_balance" string="Display Balance info on Receipt"/>
                        <div class="text-muted">
                            Display Balance info on Receipt
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

    <record id="wallet_product_9" model="product.product">
        <field name="name">From Wallet</field>
        <field name="default_code">Wallet</field>
        <field name="sale_ok" eval="True"/>
        <field name="available_in_pos" eval="True"/>
        <field name="list_price">0</field>
        <field name="type">service</field>
    </record>

    <record id="aspl_view_customer_form" model="ir.ui.view">
        <field name="name">Customer Form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook>
                <page string="Wallet">
                    <group>
                        <field name="remaining_wallet_amount"/>
                        <field name="add_change_wallet"/>
                    </group>
                    <group>
                        <field name="wallet_lines" nolabel='1'>
                            <tree create="true">
                                <field name="order_id"/>
                                <field name="cashier_id"/>
                                <field name="type"/>
                                <field name="debit"/>
                                <field name="credit"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

</odoo>