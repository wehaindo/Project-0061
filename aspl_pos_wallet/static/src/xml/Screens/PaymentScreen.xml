<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PaymentScreenInh" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
         <xpath expr="//div[@class='button back']" position="replace">
            <div class="button back" t-on-click="payment_back">
                <i class="fa fa-angle-double-left fa-fw"></i>
                <span class="back_text">Back</span>
            </div>
        </xpath>
        <xpath expr="//div[@class='paymentmethods-container']" position="replace">
            <div class="paymentmethods-container">
                <PaymentScreenPaymentLines paymentLines="paymentLines"/>
                <div class="paymentmethods">
                    <t t-foreach="env.pos.payment_methods" t-as="paymentMethod"
                       t-key="paymentMethod.id">
                        <t t-if="!paymentMethod.allow_for_wallet">
                            <PaymentMethodButton paymentMethod="paymentMethod" />
                        </t>
                    </t>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@class='payment-controls']" position="after">
            <br/>
            <div class=".payment-controls">
                <div t-if="currentOrder.get_client() and currentOrder.get_type_for_wallet() != 'recharge'"
                     class="button js_use_wallet"
                    t-att-class="{ highlight: currentOrder.is_to_wallet()}"
                    t-on-click="createPaymentLine">
                    <img src="/aspl_pos_wallet/static/src/img/icons/wallet.png" class="fa fa-file-text-o"/>
                    <span>
                        <t t-esc="env.pos.format_currency(state.remaining_wallet_amount)"/>
                    </span>
                </div>
            </div>
        </xpath>
    </t>
</templates>
