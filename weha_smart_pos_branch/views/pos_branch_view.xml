<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_branch_view_form" model="ir.ui.view">
        <field name="name">pos.branch.view.form</field>
        <field name="model">pos.branch</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="user_ids" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page name="pos_configs_page" string="POS Configs">
                            <field name="config_ids" widget="many2many">
                                <kanban>
                                    <field name="id"/>
                                    <field name="name"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click" style="max-width: 200px;">
                                                <div class="o_kanban_record_top">
                                                    <img class="oe_avatar oe_kanban_avatar_smallbox o_image_40_cover mb0" alt="Avatar" />
                                                    <div class="o_kanban_record_headings ml8">
                                                        <strong class="o_kanban_record_title"><field name="name" /></strong>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="pos_branch_view_tree" model="ir.ui.view">
        <field name="name">pos.branch.view.tree</field>
        <field name="model">pos.branch</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="user_id"/>   
            </tree>
        </field>
    </record>

    <record id="pos_branch_view_search" model="ir.ui.view">
        <field name="name">pos.branch.view.search</field>
        <field name="model">pos.branch</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"/>
                <field name="user_id"/>
            </search>
        </field>
    </record>

    <record id="action_pos_branch" model="ir.actions.act_window">
        <field name="name">POS Branch</field>
        <field name="res_model">pos.branch</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p></p>
        </field>
    </record>

    <menuitem id="menu_pos_branch"
        name="POS Branch"
        parent="menu_point_config_product"
        sequence="1"
        action="action_pos_branch"
        groups="point_of_sale.group_pos_manager"/>
</odoo>
