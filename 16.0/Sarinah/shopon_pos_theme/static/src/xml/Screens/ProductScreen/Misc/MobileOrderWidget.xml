<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-inherit="point_of_sale.MobileOrderWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('switchpane')]" position="replace">


             <div class="switchpane bottom_bar_switchpane">
                 <button class="btn-switchpane secondary" t-on-click="_openSideBar">
                    <img src="/shopon_pos_theme/static/src/img/menu.png"/><br/>
                    Menu
                </button>
                <button class="btn-switchpane secondary" t-on-click="() => this.trigger('click-pay')">
                    <img src="/shopon_pos_theme/static/src/img/pay.png"/><br/>
                    Pay
                </button>
                <button class="btn-switchpane secondary" t-on-click="props.onSwitchPane">
                    <div style="position: relative;">
                        <img src="/shopon_pos_theme/static/src/img/review.png"/>
                    <span id="review_box" t-if="items_number"><t t-esc="items_number"/></span>
                    </div>
                    Review
                </button>
                 <button class="btn-switchpane secondary " t-on-click="onClosePOS">
                    <img src="/shopon_pos_theme/static/src/img/close.png"/><br/>
                    Close
                </button>
            </div>

        </xpath>

    </t>

</templates>
