<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="weha_smart_pos_aeon_queue_busting.ActionpadWidget" t-inherit="point_of_sale.ActionpadWidget" t-inherit-mode="extension" owl="1">

            <xpath expr="//button[hasclass('pay')]" position="replace">
                <button class="button pay validation" t-on-click="() => this.trigger(props.actionToTrigger or 'click-pay')">
                    <div class="pay-circle" t-att-class="{ 'highlight': props.isActionButtonHighlighted }">
                        <i class="fa fa-chevron-right" role="img" aria-label="Pay" title="Pay" />
                    </div>
                    <t t-esc="props.actionName" />
                </button>                
                <!-- <button class="button pay validation" t-on-click="() => this.trigger('click-busting')">
                    <div class="pay-circle" t-att-class="{ 'highlight': props.isActionButtonHighlighted }">
                        <i class="fa fa-chevron-right" role="img" aria-label="Print" title="Print" />
                    </div>
                    <t t-esc="props.actionName" />
                </button> -->
            </xpath>    

    </t>
</templates>
