<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pos_activity_log_tree" model="ir.ui.view">
        <field name="name">pos.activity.log.tree</field>
        <field name="model">pos.activity.log</field>
        <field name="arch" type="xml">
            <tree string="" create="false" edit="false" delete="false">
                <field name="timestamp" />
                <field name="name"/>
                <!-- <field name="user_id" /> -->
                <field name="hr_employee_id" />
                <field name="pos_config_id"/>
                <field name="pos_session_id"/>
                <field name="pos_order_reference"/>
                <!-- <field name="pos_order_id"/> -->
                <field name="details"/>
            </tree>
        </field>
    </record>    

    <record id="view_pos_activity_log_form" model="ir.ui.view">
        <field name="name">pos.activity.log.form</field>
        <field name="model">pos.activity.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="timestamp" />
                            <field name="user_id" />
                            <field name="hr_employee_id" />
                        </group>
                        <group>
                            <field name="pos_config_id" />
                            <field name="pos_session_id" />
                            <field name="pos_order_reference" />                            
                        </group>                                                
                    </group>
                    <group>
                        <field name="details"/>
                    </group>                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pos_activity_log_search" model="ir.ui.view">
        <field name="name">pos.activity.log.search</field>
        <field name="model">pos.activity.log</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"/>
                <field name="user_id"/>
                <field name="hr_employee_id"/>
            </search>
        </field>
    </record>


    <record id="action_pos_activity_log" model="ir.actions.act_window">
        <field name="name">Pos Activity Log</field>
        <field name="res_model">pos.activity.log</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>    
    </record>

    <menuitem
        id="menu_pos_activity_log"
        name="POS Activity Log"
        action="action_pos_activity_log"
        groups="point_of_sale.group_pos_user"
        parent="point_of_sale.menu_point_rep"
        sequence="50"/>
</odoo>
