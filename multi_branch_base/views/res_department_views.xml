<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
<!--        form view       -->
        <record id="view_department_form" model="ir.ui.view">
            <field name="name">res.department.form</field>
            <field name="model">res.department</field>
            <field name="arch" type="xml">
                <form string="Retail Department">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="code"/>
                            <field name="code1"/>
                            <field name="group_id"/>
                            <field name="division_id"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
<!--        tree view       -->
        <record id="view_department_tree" model="ir.ui.view">
            <field name="name">res.department.tree</field>
            <field name="model">res.department</field>
            <field name="arch" type="xml">
                <tree string="Retail Department" sample="1">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="action_res_department_form" model="ir.actions.act_window">
            <field name="name">Retail Department</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.department</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new department
              </p><p>
                Create and manage department for the companies that will be managed by Odoo from here.
              </p>
            </field>
        </record>
<!--        Menu item       -->
        <menuitem action="action_res_department_form" id="menu_action_res_department_form" parent="base.menu_users" sequence="15"/>
    </data>
</odoo>